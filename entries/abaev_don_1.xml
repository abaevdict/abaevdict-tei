    <cit type="exampleGroup">
        <cit type="example">
            <quote>don kæly jæ ræzty ūrs æxsærʒæntæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>река льется перед ним белыми водопадами</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the river flows in front of him like white waterfalls</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>63</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>taǧd don fūrdy ne ʽjjafy</quote>
            <cit type="translation" xml:lang="ru">
                <q>быстрая река не достигает моря</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the fast river does not reach the sea</q>
            </cit>
            <bibl>
                <ref target="#src_ЮОПам."/>
                <biblScope>III 225</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>wæ siaxsy wyn don fælasy</quote>
            <cit type="translation" xml:lang="ru">
                <q>вашего зятя уносит река</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>your son-in-law is carried away by the river</q>
            </cit>
            <bibl>
                <ref target="#src_Munk."/>
                <biblScope>108</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>donlast</quote>
            <cit type="translation" xml:lang="ru">
                <q rendition="singlequotes">утопленник</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q rendition="singlequotes">drowned man</q>
            </cit>
        </cit>
        <cit type="example">
            <quote>qrīqupp xæstæǵyty donbyltyl zīly</quote>
