<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_ærwæz"
    xml:lang="os">
    <form type="lemma">
        <orth>ærwæz</orth>
    </form>
    <sense>
        <cit type="translation" xml:lang="ru">
            <q>стадо оленей</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>herd of deers</q>
        </cit>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>Acæmæz sægti ærwæz ærtardta</quote>
            <cit type="translation" xml:lang="ru">
                <q>Ацамаз пригнал стадо оленей</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>Acamaz brought in the herd of deers</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>II 70</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>со, feǵosun kænæ: xucaw nin ravardta sægti ærwæz</quote>
            <cit type="translation" xml:lang="ru">
                <q>иди, оповести: бог дал нам стадо оленей</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>go and inform: god has given us a herd of deers</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>II 123</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>komi sægtæ ærwæztæj xiztæncæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>в ущелье олени паслись стадами</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>herds of deers grazed in the gorge</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>II 6</biblScope>
            </bibl>
        </cit>
    </cit>
