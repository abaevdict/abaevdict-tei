    xml:id="entry_æppælyn" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>æppælyn</orth>
        <form type="inflected" subtype="ptcp">
            <orth>æppæld</orth>
        </form>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>æppælun</orth>
        <form type="inflected" subtype="ptcp">
            <orth>æppæld</orth>
        </form>
    </form>
    <sense>
        <cit type="translation" xml:lang="ru">
            <q>хвалить</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>to compliment</q>
        </cit>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>wæxīcæj wæm īsty æppælīnag næj?</quote>
            <cit type="translation" xml:lang="ru">
                <q>нет ли у вас самих чего-нибудь достойного хвалы?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>do you have something praiseworthy?</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>89</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>ævzær, dam, æppæly jæxīcæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>никчемный, говорят, хвалит себя</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>they say, a useless one praises oneself</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>131</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>x˳yzdær makæmæj rappæl</quote>
            <cit type="translation" xml:lang="ru">
                <q>никого не хвали больше (чем его)</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>do not praise anyone more (than him)</q>
            </cit>
            <bibl>
                <ref target="#src_Сека"/>
                <biblScope>94</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>æppælujnag тæ qæræjmag, æppælujnag тæ kæsgon</quote>
            <cit type="translation" xml:lang="ru">
                <q>достойно хвалы мое крымское (ружье), достоин хвалы мой кабардинец (конь)</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>my Crimean (gun) is praiseworthy, my Kabardinian (horse) is praiseworthy</q>
            </cit>
            <bibl>
                <ref target="#src_Gurdž._Wadž."/>
                <biblScope>26</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>xodujnag æj xe æppælun</quote>
            <cit type="translation" xml:lang="ru">
                <q>стыдно похваляться</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>it is shameful to boast</q>
            </cit>
            <bibl>
                <ref target="#src_Bes."/>
                <biblScope>61</biblScope>
            </bibl>
        </cit>
    </cit>
