        <sense><sense><cit type="translation" xml:lang="ru">
                                <q>terror</q>
                        </cit><cit type="translation" xml:lang="en">
                                <q>terror</q>
                        </cit></sense><sense><cit type="translation" xml:lang="ru">
                                <q>ужас</q>
                        </cit><cit type="translation" xml:lang="en">
                                <q>horror</q>
                        </cit></sense><sense><cit type="translation" xml:lang="ru">
                                <q>страх</q>
                        </cit><cit type="translation" xml:lang="en">
                                <q>fear</q>
                        </cit></sense><sense><cit type="translation" xml:lang="ru">
                                <q>напасть</q>
                        </cit><cit type="translation" xml:lang="en">
                                <q>misfortune</q>
                        </cit></sense><sense><cit type="translation" xml:lang="ru">
                                <q>беда</q>
                        </cit><cit type="translation" xml:lang="en">
                                <q>trouble</q>
                        </cit></sense></sense>
        <re><form type="lemma"><orth>wælazar</orth></form><sense><def xml:lang="ru">id.</def><def
                                xml:lang="en">id.</def></sense></re>
        <cit type="exampleGroup">
                <cit type="example">
                        <quote>dæw rwaǵy mæ cyppar ḱyzǵy fervæztysty zaliag kalrny azaræj</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>благодаря тебе мои четыре дочери избавились от страха перед
                                        драконом</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>thanks to you my four daughters got rid of their fear of the
                                        dragon</q>
                        </cit>
                        <bibl><ref target="#src_СОПам."/><biblScope>IV 136</biblScope></bibl>
                </cit>
                <cit type="example">
                        <quote>Barsægatæ... fæsabyrdær kodtoj sæ azar (Kobetyl)</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>Барсаговы ослабили свой террор (над фамилией Кобеевых)</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>The Barsagovs have weakened their terror (of the Kobeyev
                                        family)</q>
                        </cit>
                        <bibl><ref target="#src_Čerm."/><biblScope>95</biblScope></bibl>
                </cit>
                <cit type="example">
                        <quote>padcaxy azaræj tarstysty</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>боялись царской кары</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>were of the czar's punishment</q>
                        </cit>
                        <bibl><ref target="#src_Čerm."/><biblScope>172</biblScope></bibl>
                </cit>
                <cit type="example">
                        <quote>adæmæn sæ mast sæxsyst æmæ sæ azar Uldany ʽrdæm fæci</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>у народа закипела ярость, и их террор обрушился на Улдана</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>the rage took peopleʼs hearts, and their terror fell upon
                                        Uldan</q>
                        </cit>
                        <bibl><ref target="#src_Čerm."/><biblScope>184</biblScope></bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect"><lang/></usg>
                        <quote>ramælʒænæn azaræj, ku fæwwon Cærugtæmæ cud</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>умру от ужаса, если пойду (замуж) к Царуговым</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>I will die of horror if I go (married) to the Tsarugovs</q>
                        </cit>
                        <bibl><ref target="#src_Gurdž._Æduli"/><biblScope>103</biblScope></bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect"><lang/></usg>
                        <quote>tuxæ, wælazar ibæl make wæd</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>пусть не будет над ним ничьей силы и страха</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>let nobodyʼs power and fear be over him</q>
                        </cit>
                        <bibl><ref target="#src_СОПам."/><biblScope>II 169</biblScope></bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect"><lang/></usg>
                        <quote>Mussæ fur azaræj fæqqan æj</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>Мусса от страха повалился</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>Moussa fell down in fear</q>
                        </cit>
                        <bibl><ref target="#src_AK"/><biblScope>II 4</biblScope></bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect"><lang/></usg>
                        <quote>tuǧdmæ bacæwuni azaræj...</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>страшась пойти в бой...</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>fearing to go into battle...</q>
                        </cit>
                        <bibl><ref target="#src_Bes._Ka_ke"/><biblScope>75</biblScope></bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect"><lang/></usg>
                        <quote>azaræj fæǧǧær laston...</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>в страхе я воскликнул...</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>in fear I exclaimed ...</q>
                        </cit>
                        <bibl><ref target="#src_Sam."/><biblScope>58</biblScope></bibl>
                </cit>
                <cit type="example">
                        <quote>су azaræj ærcydystut ūcy ranmæ?</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>от какой беды (проклятия) вы дошли до этого положения?</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>from what trouble (curse) did you come to this state?</q>
                        </cit>
                        <bibl><ref target="#src_СОПам."/><biblScope>IV 80</biblScope></bibl>
                </cit>
        </cit>
