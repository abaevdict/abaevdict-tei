    xml:id="entry_æmbærzyn" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma"><orth>æmbærzyn</orth><form type="inflected"
            subtype="ptcp"><orth>æmbærzt</orth></form></form>
    <form xml:lang="os-x-digor" type="dialectal"><orth>æmbærzun</orth><form type="inflected"
            subtype="ptcp"><orth>æmbarzt</orth></form></form>
    <sense><cit type="translation" xml:lang="ru">
            <q>покрывать</q>
        </cit><cit type="translation" xml:lang="en">
            <q>cover</q>
        </cit></sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>xæxtyl zymæg jæ ūrs kærc æræmbærzta</quote>
            <cit type="translation" xml:lang="ru">
                <q>зима накрыла горы своей белой шубой</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the winter covered the mountains with its white fur coat</q>
            </cit>
            <bibl><ref target="#src_Сека"/><biblScope>28</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>arf wærm yskʼaxtoj æmæ jæ wælijæ kærdæǵytæj bambærztoj</quote>
            <cit type="translation" xml:lang="ru">
                <q>вырыли глубокую яму и сверху покрыли ее травой</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>dug a deep hole and covered it with grass</q>
            </cit>
            <bibl><ref target="#src_Munk."/><biblScope>26</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>bambærzta jyl nymæt</quote>
            <cit type="translation" xml:lang="ru">
                <q>covered her with burka</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q/>
            </cit>
            <bibl><ref target="#src_Munk."/><biblScope>72</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>lægæt ærcaræzta, zæxxæj jæ bambærzta</quote>
            <cit type="translation" xml:lang="ru">
                <q>устроила берлогу, покрыла ее землей</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>(she) made a den, covered it with sod</q>
            </cit>
            <bibl><ref target="#src_Æfx._Xæs."/><biblScope>99</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>Xadizæt Kalaxanbæl iskodta ors zældagæ pʼolci, ba-ʽj-æmbarzta saw xizæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>Хадизат надела на Калахан белое шелковое платье, накрыла ее черным кружевным
                    платком</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>Khadizat put on a white silk dress on Kalahan, covered her with a black lace
                    shawl</q>
            </cit>
            <bibl><ref target="#src_MD"/><biblScope>1949 II 46</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>agæ fæjnægæj æmbærzuni ǧud kæntæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>позаботьтесь, чтобы накрыть котел доской</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>make sure to cover the boiler with a plank</q>
            </cit>
            <bibl><ref target="#src_MSt."/><biblScope>33%l12%l</biblScope></bibl>
        </cit>
    </cit>
