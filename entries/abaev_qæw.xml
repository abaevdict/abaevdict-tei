            </abv:tr>
            <abv:tr xml:lang="en">
              <q>aul</q>
            </abv:tr>
          </sense>
        </sense>
        <re xml:id="re_d5517e101">
          <form xml:id="form_d5517e103" type="lemma"><orth>qæwkkag</orth><form
              xml:id="form_d5517e105" type="variant"><orth>qæwwon</orth></form></form>
