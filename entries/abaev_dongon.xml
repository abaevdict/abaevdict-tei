<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_dongon" xml:lang="os-x-digor">
    <form type="lemma">
        <orth>dongon</orth>
    </form>
    <sense>
        <cit type="translation" xml:lang="ru">
            <q>у реки</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>near the river</q>
        </cit>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>æristadæncæ dongoni</quote>
            <cit type="translation" xml:lang="ru">
                <q>остановились у реки</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>they stopped near the river</q>
            </cit>
            <bibl>
                <ref target="#src_Iræf"/>
                <biblScope>41</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>Soslan i dongon mardæj bajzadæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>Сослан остался мертвый у реки</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>Soslan was left dead by the river</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>II 50</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>xætuj xansi medag ædas xæstæg dongænttæmæ cʼæx ars</quote>
            <cit type="translation" xml:lang="ru">
                <q>бродит в чаще безопасно близ речных берегов серый медведь</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>gray bear wanders safely in the depths of a forest near the river banks</q>
            </cit>
            <bibl>
                <ref target="#src_Iræf"/>
                <biblScope>62</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>dongoni kinʒxontæ bæxtæn don darunbæl ew usmæ baʒebæl æncæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>у реки сопровождающие невесту люди некоторое время замешкались, давая лошадям
                    пить</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the people accompanying the bride lingered for a while by the river, giving the
                    horses to drink</q>
            </cit>
            <bibl>
                <ref target="#src_Iræf"/>
                <biblScope>120</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>fæidton næ dongon donmistæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>я увидела у нашей речки водяную мышь</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I saw a water mouse near our river</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>II 172</biblScope>
            </bibl>
        </cit>
    </cit>
