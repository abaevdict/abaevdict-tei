<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_amond"
    xml:lang="os">
    <form type="lemma">
        <orth>amond</orth>
    </form>
    <sense>
        <cit type="translation" xml:lang="ru">
            <q>счастье</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>happiness</q>
        </cit>
    </sense>
    <sense xml:lang="os-x-digor">
        <usg>
            <lang/>
        </usg>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>сострадание</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>compassion</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>грех</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>sin</q>
            </cit>
        </sense>
        <note type="comment" xml:lang="ru">также в</note>
        <note type="comment" xml:lang="en">also</note>
    </sense>
    <re>
        <re>
            <form type="lemma">
                <orth>amondǵyn</orth>
            </form>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>счастливый</q>
                </cit>
                <cit type="translation" xml:lang="en">
                    <q>happy</q>
                </cit>
            </sense>
        </re>
        <re>
            <form type="lemma">
                <orth>ænamond</orth>
            </form>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>несчастный</q>
                </cit>
                <cit type="translation" xml:lang="en">
                    <q>unhappy</q>
                </cit>
            </sense>
            <note type="comment" xml:lang="ru">; ср. д. %inivæ%i [<ref type="xr" target="#entry_nyv"
                />], д. <ref type="xr" target="#entry_fes"/></note>
            <note type="comment" xml:lang="en">; cf. Digor %inivæ%i [<ref type="xr"
                    target="#entry_nyv"/>], Digor <ref type="xr" target="#entry_fes"/></note>
        </re>
    </re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>amond... næ xæssy biræ</quote>
            <cit type="translation" xml:lang="ru">
                <q>счастье не продолжается долго</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>happiness doesn't last long</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>49</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>amond jæ qaqqænæg</quote>
            <cit type="translation" xml:lang="ru">
                <q>счастье его оберегает</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>happiness protects him</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>85</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>me ʽnamond ærcydīs</quote>
            <cit type="translation" xml:lang="ru">
                <q>пришло мое несчастье</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>my misfortune has come</q>
            </cit>
            <bibl>
                <ref target="#src_Munk."/>
                <biblScope>30</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>xorz amond dæ xaj</quote>
            <cit type="translation" xml:lang="ru">
                <q>доброе счастье — твоя доля</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>good happiness is your share</q>
            </cit>
            <note type="comment" xml:lang="ru"> (пожелание девушке)</note>
            <note type="comment" xml:lang="en"> (wish for a girl)</note>
        </cit>
        <cit type="example">
            <quote>fydamond fæxæss</quote>
            <cit type="translation" xml:lang="ru">
                <q>будь носительницей дурного счастья</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>be the bearer of bad happiness</q>
            </cit>
            <note type="comment" xml:lang="ru"> (бранное выражение в отношении девушки)</note>
            <note type="comment" xml:lang="en"> (swear expression in relation to a girl)</note>
        </cit>
        <cit type="example">
            <quote>асу amond akkag æz næ dæn</quote>
            <cit type="translation" xml:lang="ru">
                <q>я не достоин этого счастья</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I am not worthy of this happiness</q>
            </cit>
            <bibl>
                <ref target="#src_Брит."/>
                <biblScope>57</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>mæn dær smax fenamond kodtat</quote>
            <cit type="translation" xml:lang="ru">
                <q>и меня вы сделали несчастной</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>you made me unhappy too</q>
            </cit>
            <bibl>
                <ref target="#src_Брит."/>
                <biblScope>25</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>amond næ agurdtaj, ændæra ʽj isserdtajsæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>ты не искал счастья, а не то нашел бы его</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>you were not looking for happiness, otherwise you would have found it</q>
            </cit>
            <bibl>
                <ref target="#src_Iræf"/>
                <biblScope>119</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>amond æma din bereket baxæssænæn dæ xæʒaræmæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>счастье и изобилие принесу я в твой дом</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I will bring happiness and abundance to your house</q>
            </cit>
            <bibl>
                <ref target="#src_MD"/>
                <biblScope>1940 III 61</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>sajtanaw — ǧæwagæ amondæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>как демон, коварна и зла (лишена сострадания)</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>like a demon, she is insidious and evil (devoid of compassion)</q>
            </cit>
            <bibl>
                <ref target="#src_Gurdž._Wadž."/>
                <biblScope>33</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>mæ odi amondi ma bacotæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>не берите на себя грех моей души</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>don't take the sin of my soul on yourselves</q>
            </cit>
            <bibl>
                <ref target="#src_Диг._сказ."/>
                <biblScope>27</biblScope>
            </bibl>
        </cit>
    </cit>
