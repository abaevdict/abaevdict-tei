<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_æfxæryn" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>æfxæryn</orth>
        <form type="inflected" subtype="ptcp">
            <orth>æfxærd</orth>
        </form>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>æfxwærun</orth>
        <form type="inflected" subtype="ptcp">
            <orth>æfxward</orth>
        </form>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>обижать</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>to offend</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>оскорблять</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>to insult</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>выговаривать</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>to rebuke</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>наказывать</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>to punish</q>
            </cit>
        </sense>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>aj dyn mæ fydy mard, aj dyn mæ mady ʽfxærd!</quote>
            <cit type="translation" xml:lang="ru">
                <q>это тебе за убийство моего отца, это тебе за оскорбление моей матери!</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>this is for killing my father, this is for insulting my mother!</q>
            </cit>
            <bibl>
                <ref target="#src_Æfx._Xæs."/>
                <biblScope>104</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>bafxærdta mæ, mæ card myn bassæsta</quote>
            <cit type="translation" xml:lang="ru">
                <q>он оскорбил меня, растоптал мою жизнь</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he insulted me, trampled on my life</q>
            </cit>
            <bibl>
                <ref target="#src_Брит."/>
                <biblScope>145</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>Narty... ʒawmatæ raxæsson æmæ sæ bafxæron</quote>
            <cit type="translation" xml:lang="ru">
                <q>заберу я у Нартов одежды и оскорблю их</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I will take the clothes from Narts and insult them</q>
            </cit>
            <bibl>
                <ref target="#src_ОЭ"/>
                <biblScope>I 26</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>mе ʽfxward, mæ xodujnag næ feronx kænʒænæn</quote>
            <cit type="translation" xml:lang="ru">
                <q>мое оскорбление, мой позор я не забуду</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>my offense, my shame I won't forget</q>
            </cit>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>ma osi fidæ mæ bafxwardta</quote>
            <cit type="translation" xml:lang="ru">
                <q>мой тесть оскорбил меня</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>my father-in-law insulted me</q>
            </cit>
            <bibl>
                <ref target="#src_ОЭ"/>
                <biblScope>I 92</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>Asiat, асу æmgærtty fyccag dy bafxærdtaj, nyr ta ūdon dæw bafxærdtoj</quote>
            <cit type="translation" xml:lang="ru">
                <q>Асиат, этих друзей сперва ты обидела, теперь они тебя обидели</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>Asiat, you offended these friends at first, now they offended you</q>
            </cit>
            <bibl>
                <ref target="#src_Брит."/>
                <biblScope>53</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>cæmæn mæ bayxwardtajtæ?</quote>
            <cit type="translation" xml:lang="ru">
                <q>почему вы меня обидели?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>why did you hurt me?</q>
            </cit>
            <bibl>
                <ref target="#src_MSt."/>
                <biblScope>30%l6%l</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>rawænæj rawænti don fur æfxwærnitæ nikkænuj</quote>
            <cit type="translation" xml:lang="ru">
                <q>местами река сильно размывает („производит повреждения“)</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>in some places the river is eroded much (“damages”)</q>
            </cit>
            <bibl>
                <ref target="#src_Bes._Ka_ke"/>
                <biblScope>47</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>æyxwærnitæ iskʼanæwttæ uncæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>размытые водой места обращаются в канавы</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>places washed out by water turn into ditches</q>
            </cit>
            <bibl>
                <ref target="#src_AK"/>
                <biblScope>III 59</biblScope>
            </bibl>
        </cit>
    </cit>
