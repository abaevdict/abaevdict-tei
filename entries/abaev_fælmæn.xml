    <form type="lemma"><orth>fælmæn</orth></form>
    <sense><cit type="translation" xml:lang="ru">
            <q>мягкий</q>
        </cit><cit type="translation" xml:lang="en">
            <q>soft</q>
        </cit></sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>qarm fælmæn kærc dary</quote>
            <cit type="translation" xml:lang="ru">
                <q>носит теплую мягкую шубу</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he wears a warm soft fur coat</q>
            </cit>
            <bibl><ref target="#src_Коста"/><biblScope>113</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>fælmæn bælasy kalm baxordta</quote>
            <cit type="translation" xml:lang="ru">
                <q>мягкое дерево поел червь</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>a worm ate through a soft tree</q>
            </cit>
            <bibl><ref target="#src_Ӕмб."/><biblScope>26</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>fælmæn ærtæx rast zænxæn</quote>
            <cit type="translation" xml:lang="ru">
                <q>нежная роса на праведную землю</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>gentle dew for the righteous land</q>
            </cit>
            <bibl><ref target="#src_СОПам."/><biblScope>II 155</biblScope></bibl>
        </cit>
    </cit>
