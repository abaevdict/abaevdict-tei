    <cit type="exampleGroup">
        <cit type="example">
            <quote>dættæ ixæj ʽsabūztoj</quote>
            <cit type="translation" xml:lang="ru">
                <q>реки вспучились от намерзшего льда</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>rivers swelled because of frozen ice</q>
            </cit>
        </cit>
        <cit type="example">
            <quote>jæ cæsgom xælmagæj ʽsabūzta</quote>
            <cit type="translation" xml:lang="ru">
