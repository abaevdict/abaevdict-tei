<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_bynʒ"
    xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma"><orth>bynʒ</orth></form>
    <form xml:lang="os-x-digor" type="dialectal"><orth>binʒæ</orth></form>
    <sense><cit type="translation" xml:lang="ru">
            <q>муха</q>
        </cit><cit type="translation" xml:lang="en">
            <q>fly</q>
        </cit></sense>
    <re><form xml:lang="os-x-iron" type="lemma"><orth>mydybynʒ</orth></form><form
            xml:lang="os-x-digor" type="dialectal"><orth>mudbinʒæ</orth></form><sense><cit
                type="translation" xml:lang="ru">
                <q>пчела</q>
            </cit><cit type="translation" xml:lang="en">
                <q>bee</q>
            </cit></sense></re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>zalmy syftætīlync, bynʒ næ waʒync ʽvvaxs...</quote>
            <cit type="translation" xml:lang="ru">
                <q>помахивают листьями лопуха, не подпускают близко мухи</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>they are wagging burdock leaves, do not let a fly come closer</q>
            </cit>
            <bibl><ref target="#src_Коста"/><biblScope>64</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>dessag adtæj mudi binʒitæmæ kæsun</quote>
            <cit type="translation" xml:lang="ru">
                <q>удивительно было смотреть на пчел</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>watching bees was amazing</q>
            </cit>
            <bibl><ref target="#src_AK"/><biblScope>III 65</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>jæ fædyl nybbynʒ ī</quote>
            <cit type="translation" xml:lang="ru">
                <q>понесся („как муха“) вслед за ним</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>[he] rushed after him ("like a fly")</q>
            </cit>
        </cit>
    </cit>
