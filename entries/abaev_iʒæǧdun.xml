            <entry xml:id="entry_iʒæǧdun" xml:lang="os-x-digor">
                <form type="lemma"><orth>iʒæǧdun</orth><form type="participle"
                        ><orth>iʒaǧd</orth></form></form>
                <usg><lang/></usg>
                <sense><abv:tr xml:lang="ru">
                        <q>разбрасывать</q>
                    </abv:tr><abv:tr xml:lang="en">
                        <q>to scatter</q>
                    </abv:tr></sense>
                <abv:exampleGrp>
                    <abv:example>
                        <quote>Taqazi furt karst mænæwtæ nijʒæǧdun kodta</quote>
                        <abv:tr xml:lang="ru">
                            <q>Таказов велел разбросать скошенную пшеницу</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>Takazov ordered to scatter mowed wheat</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_SD"
                            /><biblScope>295%l4%l</biblScope></bibl>
                    </abv:example>
                    <abv:example>
                        <quote>biccew imæ æxe bajʒæǧduj</quote>
                        <abv:tr xml:lang="ru">
                            <q>мальчик бросается к нему</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>a boy is rushing towards him</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Bes._Ka_ke"
                            /><biblScope>4</biblScope></bibl>
                    </abv:example>
                </abv:exampleGrp>
                <etym xml:lang="ru">Восходит к иран. *%ivi-čak-t-%i; см. <ref type="xr"
                        target="#entry_cæǧdyn"/>; ср. <ref type="xr" target="#entry_iʒæxsun"
                    />.</etym>
                <etym xml:lang="en">Traces back to Iranian *%ivi-čak-t-%i; see <ref type="xr"
                        target="#entry_cæǧdyn"/>; cf. <ref type="xr" target="#entry_iʒæxsun"
                    />.</etym>
            </entry>
