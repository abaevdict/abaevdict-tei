    xml:lang="os">
    <form type="lemma">
        <orth>æǧnæg</orth>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>застежка</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>clasp</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>пуговица</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>button</q>
            </cit>
        </sense>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>rīwy ʽǧnæǵytæ qazync st’alytaw</quote>
            <cit type="translation" xml:lang="ru">
                <q>застежки на груди играют, как звезды</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>clasps on chest sparkle like stars</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>19</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>ængom cærūt, æǧnæg æmæ sæxtæg k˳yd cærync</quote>
            <cit type="translation" xml:lang="ru">
                <q>живите дружно, как живут пуговица и петля</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>live together like a button and a buttonhole</q>
            </cit>
        </cit>
        <cit type="example">
            <quote>ūj bæsty wal dæ æǧnæǵytæ æværyn sах˳уr ū</quote>
            <cit type="translation" xml:lang="ru">
                <q>лучше бы ты научился застегивать свои пуговицы</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>you'd better learn how to button up</q>
            </cit>
            <bibl>
                <ref target="#src_Брит."/>
                <biblScope>42</biblScope>
            </bibl>
        </cit>
    </cit>
