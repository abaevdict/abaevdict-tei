        <form xml:lang="os-x-iron" type="lemma"><orth>būstæ</orth></form>
        <form xml:lang="os-x-digor" type="dialectal"><orth>bostæ</orth></form>
        <re><form xml:lang="os-x-iron" type="lemma"><orth>būstæ kænyn</orth></form><form
                        xml:lang="os-x-digor" type="dialectal"><orth>bostæ
                                        kænun</orth></form><sense><sense><cit type="translation"
                                        xml:lang="ru">
                                        <q>выражать недовольство</q>
                                </cit><cit type="translation" xml:lang="en">
                                        <q>complain</q>
                                </cit></sense><sense><cit type="translation" xml:lang="ru">
                                        <q>роптать</q>
                                </cit><cit type="translation" xml:lang="en">
                                        <q>grumble</q>
                                </cit></sense><sense><cit type="translation" xml:lang="ru">
                                        <q>капризничать</q>
                                </cit><cit type="translation" xml:lang="en">
                                        <q>be capricious</q>
                                </cit></sense><sense><cit type="translation" xml:lang="ru">
                                        <q>ворчать</q>
                                </cit><cit type="translation" xml:lang="en">
                                        <q>growl</q>
                                </cit></sense><sense><cit type="translation" xml:lang="ru">
                                        <q>упрекать</q>
                                </cit><cit type="translation" xml:lang="en">
                                        <q>blame</q>
                                </cit></sense></sense></re>
        <cit type="exampleGroup">
                <cit type="example">
                        <quote>су myn būstæ kænys?</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>что ты меня попрекаешь?“</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>why do you blame me?</q>
                        </cit>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect"><lang/></usg>
                        <quote>kæwuj ænæ bostæ je ʽstongbæl mæ bæx</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>плачет без ропота о своем голоде моя лошадь</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>my horse cries without grumbling because of its hunger</q>
                        </cit>
                        <bibl><ref target="#src_Iræf"/><biblScope>17</biblScope></bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect"><lang/></usg>
                        <quote>bostitæ %i(sic!)%i е næ kænuj, gebenaj dær baxussuj</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>он не ропщет (не капризничает), спит даже в старой шубе</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>he does not grumble, complain, he sleeps even in an old
                                        furcoat</q>
                        </cit>
                        <bibl><ref target="#src_СОПам."/><biblScope>II 156</biblScope></bibl>
                </cit>
        </cit>
