<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_fæxsyn" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>fæxsyn</orth>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>fæxsun</orth>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>туша, заготовленная впрок</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>carcass prepared for future use</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>курдюк</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>fat tail</q>
            </cit>
        </sense>
    </sense>
    <sense>
        <cit type="translation" xml:lang="ru">
            <q>задняя часть барана, закопченная целиком</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>the back of the ram, which was smoked wholly</q>
        </cit>
        <note type="comment" xml:lang="ru">по объяснению <bibl><ref target="#ref_СОПам."
                    /><biblScope>III 138</biblScope></bibl>: </note>
        <note type="comment" xml:lang="en">according to the explanation in <bibl><ref
                    target="#ref_СОПам."/><biblScope>III 138</biblScope></bibl>: </note>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>fīzonæg fæqæbær, fæxsyntæ nærsync</quote>
            <cit type="translation" xml:lang="ru">
                <q>шашлык покрылся корочкой, туши разбухают (от варки)</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the kebab got covered with a crust, the carcasses start swelling from cooking</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>64</biblScope>
            </bibl>
        </cit>
    </cit>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>ūj kæj fæxsyntæ næ fædavta... axæm xæʒar næ razynʒæn Narty qæwy</quote>
            <cit type="translation" xml:lang="ru">
                <q>в Нартовском селении не отыщется такого дома, откуда бы она (сука Сырдона) не
                    утащила баранью тушу</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>in the Nart village there is no house from which she (Sirdon's dog) would not
                    steal a ram carcass</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>III 27</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>Negor ældar dær nælfusi fæxsun beræǧæn ragælsta</quote>
            <cit type="translation" xml:lang="ru">
                <q>Негор-алдар кинул волку баранью тушу</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>Negor-aldar threw a ram carcass to the wolf</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>II 74</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>ærcawyǧta myn cæxǵyn fæxsyn me fcægyl</quote>
            <cit type="translation" xml:lang="ru">
                <q>повесил мне на шею соленую баранью тушу</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he hung a salted lamb carcass around my neck</q>
            </cit>
            <bibl>
                <ref target="#src_ОЭ"/>
                <biblScope>I 56</biblScope>
            </bibl>
        </cit>
    </cit>
