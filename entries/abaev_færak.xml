<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_færak"
    xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma"><orth>færak</orth></form>
    <form xml:lang="os-x-digor" type="dialectal"><orth>færwakæ</orth></form>
    <sense><cit type="translation" xml:lang="ru">
            <q>отруби</q>
        </cit><cit type="translation" xml:lang="en">
            <q>bran</q>
        </cit></sense>
    <etym xml:lang="ru">Восходит к <mentioned xml:lang="ira"><lang/><w>*parvā-ka</w></mentioned>,
        где %i*parvā-%i отвечает <mentioned xml:lang="ine"><lang/><w>*pelvā-</w></mentioned>; ср.
            <mentioned xml:lang="sa"
            ><lang/><w>palāva-</w><gloss><q>мякина</q></gloss></mentioned><mentioned xml:lang="sa"
                    ><w/><gloss><q>шелуха</q></gloss></mentioned>, , <mentioned xml:lang="cu"
                ><lang/><w>плѣва</w><gloss><q>мякина</q></gloss></mentioned>, <mentioned
            xml:lang="ru"><lang/><w>полова, пелёва</w></mentioned>, <mentioned xml:lang="prg"
                ><lang/><w>pelwo</w></mentioned>, <mentioned xml:lang="lv"
            ><lang/><w>pelawas</w></mentioned>, <mentioned xml:lang="lt"
                    ><lang/><w>pelvas</w><gloss><q>мякина</q></gloss></mentioned>.</etym>
    <etym xml:lang="en">Traces back to <mentioned xml:lang="ira"
        ><lang/><w>*parvā-ka</w></mentioned>, where %i*parvā-%i corresponds to <mentioned
            xml:lang="ine"><lang/><w>*pelvā-</w></mentioned>; cf. <mentioned xml:lang="sa"
                ><lang/><w>palāva-</w><gloss><q>chaff</q></gloss></mentioned><mentioned
            xml:lang="sa"><w/><gloss><q>husk</q></gloss></mentioned>, , <mentioned xml:lang="cu"
                ><lang/><w>плѣва</w><gloss><q>chaff</q></gloss></mentioned>, <mentioned
            xml:lang="ru"><lang/><w>полова, пелёва</w></mentioned>, <mentioned xml:lang="prg"
                ><lang/><w>pelwo</w></mentioned>, <mentioned xml:lang="lv"
            ><lang/><w>pelawas</w></mentioned>, <mentioned xml:lang="lt"
                    ><lang/><w>pelvas</w><gloss><q>chaff</q></gloss></mentioned>.</etym>
</entry>
