<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_cyvzy"
    xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>cyvzy</orth>
        <form type="variant">
            <orth>cybʒy</orth>
        </form>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>civzæ</orth>
    </form>
    <sense>
        <cit type="translation" xml:lang="ru">
            <q>красный перец</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>red pepper</q>
        </cit>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>mænæn ta raxæssūt færnyǵy xæʒaræj cyvzyǵyn araq</quote>
            <cit type="translation" xml:lang="ru">
                <q>мне же вынесите из благословенного дома араку с красным перцем</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>and for me take out some araka with red pepper from the blessed house</q>
            </cit>
            <bibl>
                <ref target="#src_Æfx._Xæs."/>
                <biblScope>113</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>kʼeretæ, civzgun nard fid...</quote>
            <cit type="translation" xml:lang="ru">
                <q>пироги, жирное мясо с перцем...</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>pies, fatty meat with pepper...</q>
            </cit>
            <bibl>
                <ref target="#src_Qazb."/>
                <biblScope>29</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>suǧd kʼæbær fevduldtaj civzʒosi</quote>
            <cit type="translation" xml:lang="ru">
                <q>обгорелый ломоть ты макал в рассол с перцем</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>you dipped the burnt slice in the pickle with pepper</q>
            </cit>
            <bibl>
                <ref target="#src_Qazb."/>
                <biblScope>35</biblScope>
            </bibl>
        </cit>
    </cit>
