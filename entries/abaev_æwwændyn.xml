<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_æwwændyn" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>æwwændyn</orth>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>æwwændun</orth>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>доверять</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>trust</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>верить</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>believe</q>
            </cit>
        </sense>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>bawwænd myl, о, Inal</quote>
            <cit type="translation" xml:lang="ru">
                <q>поверь мне, о Инал</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>trust me, oh Inal</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>143</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>wæ astæw rævzaretæ kæbæl æwwændetæ wæxæn lægtæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>выберите из своей среды людей, которым вы доверяете</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>choose those people in your midst who you trust</q>
            </cit>
            <bibl>
                <biblScope xml:lang="ru">из рукописи Г. %sКокиева%s</biblScope>
                <biblScope xml:lang="en">from G. %sKokiev%s's manuscript</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>zin-æwwændæ æj æma din dæ ʒurdditæbæl ku nе ’wwænda...</quote>
            <cit type="translation" xml:lang="ru">
                <q>он недоверчив и если не поверит твоим словам...</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he is mistrustful and if he doesn't believe your words…</q>
            </cit>
            <bibl>
                <ref target="#src_Диг._сказ."/>
                <biblScope>37</biblScope>
            </bibl>
        </cit>
    </cit>
