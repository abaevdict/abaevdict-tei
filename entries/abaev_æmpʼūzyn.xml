    xml:id="entry_æmpʼūzyn" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma"><orth>æmpʼūzyn</orth><form type="inflected"
            subtype="ptcp"><orth>æmpʼyzt</orth></form></form>
    <form xml:lang="os-x-digor" type="dialectal"><orth>æmpʼozun</orth><form type="inflected"
            subtype="ptcp"><orth>æmpʼuzt</orth></form></form>
    <sense><sense><cit type="translation" xml:lang="ru">
                <q>чинить</q>
            </cit><cit type="translation" xml:lang="en">
                <q>repair</q>
            </cit></sense><sense><cit type="translation" xml:lang="ru">
                <q>латать</q>
            </cit><cit type="translation" xml:lang="en">
                <q>mend</q>
            </cit></sense><sense><cit type="translation" xml:lang="ru">
                <q>штопать</q>
            </cit><cit type="translation" xml:lang="en">
                <q>darn</q>
            </cit></sense></sense>
    <re><form xml:lang="os-x-iron" type="lemma"><orth>æmpʼūzæn</orth></form><form
            xml:lang="os-x-digor" type="dialectal"><orth>æmpʼozæn</orth></form><sense><cit
                type="translation" xml:lang="ru">
                <q>заплата</q>
            </cit><cit type="translation" xml:lang="en">
                <q>patch</q>
            </cit></sense></re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>Totyraʒ jæxī cættæ kæny dard balcmæ, æmpʼūzy jæ xædættæ, ændærtæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>Тотрадз готовится к далекому путешествию, чинит свои рубашки и прочее</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>Totrads prepares for a long journey, repairs his shirts and more</q>
            </cit>
            <bibl><ref target="#src_Arsen"/><biblScope>233</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>sæ mūsong ū kæddag, æmpʼyzt</quote>
            <cit type="translation" xml:lang="ru">
                <q>их шатер — из холста, в заплатах</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>their tent is from canvas, all in patches</q>
            </cit>
            <bibl><ref target="#src_Bar."/><biblScope>98</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>fydgomæj fydæmpʼyzt x˳yzdær</quote>
            <cit type="translation" xml:lang="ru">
                <q>лучше быть в плохо починенной (одежде), чем совсем голым</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>it’s better to wear poorly repaired (clothes) than to be completely naked</q>
            </cit>
            <bibl><ref target="#src_ЮОПам."/><biblScope>III 204</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>de ʽmpʼozujnægtæ ærdaræ, æz ba din sæ barævʒitæ kænon</quote>
            <cit type="translation" xml:lang="ru">
                <q>покажи, что у тебя нуждается в починке, я тебе приведу в порядок</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>show which things of yours needs mending, I'll put you in order</q>
            </cit>
            <bibl><ref target="#src_Iræf"/><biblScope>122</biblScope></bibl>
        </cit>
    </cit>
