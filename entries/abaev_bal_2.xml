    <form xml:lang="os-x-iron" type="lemma"><orth>bal</orth></form>
    <form xml:lang="os-x-digor" type="dialectal"><orth>bali</orth></form>
    <sense><sense><cit type="translation" xml:lang="ru">
                <q>вишня</q>
            </cit><cit type="translation" xml:lang="en">
                <q>cherry</q>
            </cit></sense><sense><cit type="translation" xml:lang="ru">
                <q>черешня</q>
            </cit><cit type="translation" xml:lang="en">
                <q>sweet cherry</q>
            </cit></sense></sense>
    <cit type="exampleGroup">
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>æ saw duwwæ cæsti balij duwwæ næmugi xuzæn</quote>
            <cit type="translation" xml:lang="ru">
                <q>ее два черных глаза — как две вишневые ягоды</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>her two black eyes are like two cherry berries</q>
            </cit>
            <bibl><ref target="#src_MD"/><biblScope>1940 III 50</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>zærvatykk... jæ læppynty cūr balbælasyl abadt</quote>
            <cit type="translation" xml:lang="ru">
                <q>ласточка села возле своих птенцов на вишневое дерево</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>a swallow sat near its nestlings on the cherry tree</q>
            </cit>
            <bibl><ref target="#src_Сека"/><biblScope>108</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>æristiǧtoncæ balij cʼaræ</quote>
            <cit type="translation" xml:lang="ru">
                <q>содрали вишневую кору</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>cherry bark was pulled away</q>
            </cit>
            <bibl><ref target="#src_ОЭ"/><biblScope>I 96</biblScope></bibl>
        </cit>
    </cit>
