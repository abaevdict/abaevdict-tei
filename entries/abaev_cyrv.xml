    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>осадки пива</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>beer sediments</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>пивные дрожжи</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>brewers' yeast</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>гуща</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>pulp</q>
            </cit>
        </sense>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>k˳yvdæn ma jæ fælxortæ ærbajjæfton, bægænyjæn jæ cyrvy byntæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>от пиршества я застал только объедки, от пива — осадки</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I found only leftovers from a feast, from beer — sediments</q>
            </cit>
            <bibl>
                <ref target="#src_ЮОПам."/>
                <biblScope>III 213</biblScope>
            </bibl>
        </cit>
    </cit>
    <cit type="exampleGroup">
