            <entry xml:id="entry_arawyn_2" n="2" xml:lang="os">
                <form xml:id="form_d1664e66" xml:lang="os-x-iron" type="lemma"><orth>arawyn</orth><form xml:id="form_d1664e68" type="participle"><orth>aryd</orth></form></form>
                <form xml:id="form_d1664e71" xml:lang="os-x-digor" type="dialectal"><orth>arawun</orth><form xml:id="form_d1664e73" type="participle"><orth>arud</orth></form></form>
                <sense xml:id="sense_d1664e76"><abv:tr xml:lang="ru">
                        <q>оглашать сильным шумом</q>
                    </abv:tr><note type="comment" xml:lang="ru"> (обычно, но не исключительно, про
                        %sэхо%s)</note><note type="comment" xml:lang="en"> (usually, but not
                        exclusively, about %secho%s)</note><abv:tr xml:lang="en">
                        <q>make a loud noise</q>
                    </abv:tr><note type="comment" xml:lang="ru"> (обычно, но не исключительно, про
                        %sэхо%s)</note><note type="comment" xml:lang="en"> (usually, but not
                        exclusively, about %secho%s)</note></sense>
                <abv:exampleGrp xml:id="exampleGrp_d1664e94">
                    <abv:example xml:id="example_d1664e96">
                        <quote>toppy qæræj… bæstæ arydta</quote>
                        <abv:tr xml:lang="ru">
                            <q>ружейная пальба оглашала всю окрестность</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>rifle firing was heard throughout the neighborhood</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Сека"/><biblScope>9</biblScope></bibl>
                    </abv:example>
                    <abv:example xml:id="example_d1664e115">
                        <quote>syvællætty cʼæxaxstæj kʼæʒæxtæ arydtoj</quote>
                        <abv:tr xml:lang="ru">
                            <q>плач детей оглашал скалы</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>the crying of children resounded through the rocks</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Сека"/><biblScope>23</biblScope></bibl>
                    </abv:example>
                    <abv:example xml:id="example_d1664e134">
                        <quote>donæn jæ særsæræj arawy kom</quote>
                        <abv:tr xml:lang="ru">
                            <q>шум реки оглашает ущелье</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>the noise of the river resounds through the gorge</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Xar._Zærdæ"/><biblScope>58</biblScope></bibl>
                    </abv:example>
                    <abv:example xml:id="example_d1664e153">
                        <quote>sæ zaræǵy qær kæmttæ arydta</quote>
                        <abv:tr xml:lang="ru">
                            <q>звуки их песен оглашали ущелья</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>the sound of their songs resounded through the gorges</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_F."/><biblScope>1957 I
                            9</biblScope></bibl>
                    </abv:example>
                    <abv:example xml:id="example_d1664e172" xml:lang="os-x-digor">
                        <usg><lang/></usg>
                        <quote>fæjjaw… ǧær nizzaruj; oj niffænzgæ i zæǧændor xwænxtæ, ǧædtæ
                            niccarawuj</quote>
                        <abv:tr xml:lang="ru">
                            <q>пастух запевает громко; подражая ему, эхо оглашает горы, леса</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>the shepherd starts singing loudly; imitating him, the echo resounds
                                through the mountains and forests</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Iræf"/><biblScope>41</biblScope></bibl>
                    </abv:example>
                    <abv:example xml:id="example_d1664e195" xml:lang="os-x-digor">
                        <usg><lang/></usg>
                        <quote>arudæj bæstæ sæ toppaʒaǧdæj</quote>
                        <abv:tr xml:lang="ru">
                            <q>от их ружейной пальбы гремело эхо</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>their gunshots echoed</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Bes."/><biblScope>109</biblScope></bibl>
                    </abv:example>
                </abv:exampleGrp>
                <etym xml:lang="ru">Старое сращение преверба %iа-%i с основой %irav-%i (%iru-%i)
                    ‘шуметь’, ‘реветь’; ср. <mentioned corresp="#mentioned_d1664e308" xml:id="mentioned_d1664e220" xml:lang="sa"><lang/>
                        <w>rav-</w>
                        <gloss><q>реветь</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e316" xml:id="mentioned_d1664e228" xml:lang="sa"><w/>
                        <gloss><q>шуметь</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e322" xml:id="mentioned_d1664e234" xml:lang="sa"><w/>
                        <gloss><q>греметь</q></gloss></mentioned>, <mentioned xml:id="mentioned_d1664e240" xml:lang="sa"><w>rāuti, ravati, ruvati</w>
                        <gloss><q>он ревет</q></gloss></mentioned>, <mentioned xml:id="mentioned_d1664e246" xml:lang="ru"><lang/>
                        <w>реветь</w></mentioned>, <mentioned corresp="#mentioned_d1664e343" xml:id="mentioned_d1664e252" xml:lang="grc"><lang/>
                        <w>ωρύομαι</w>
                        <gloss><q>издавать крик</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e351" xml:id="mentioned_d1664e260" xml:lang="grc"><w/>
                        <gloss><q>реветь</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e357" xml:id="mentioned_d1664e266" xml:lang="la"><lang/>
                        <w>rumor</w>
                        <gloss><q>шум</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e365" xml:id="mentioned_d1664e274" xml:lang="la"><w>ravus</w>
                        <gloss><q>хриплый</q></gloss></mentioned> и пр.; на иранской почве, может
                    быть, относятся сюда же <mentioned corresp="#mentioned_d1664e371" xml:id="mentioned_d1664e280" xml:lang="wbl"><lang/>
                        <w>varüy- : varoid-</w></mentioned>, <mentioned corresp="#mentioned_d1664e376" xml:id="mentioned_d1664e285" xml:lang="srh"><lang/>
                        <w>varau-: varüd-</w>
                        <gloss><q>выть</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e385" xml:id="mentioned_d1664e294" xml:lang="srh"><w/>
                        <gloss><q>лаять</q></gloss></mentioned> (<bibl><ref type="bibl" target="#ref_Shaw"/><biblScope>XLV 225</biblScope></bibl>).</etym>
                <etym xml:lang="en">The old contraction of the preverb %iа-%i and the stem %irav-%i
                    (%iru-%i) ‘make noises’, ‘roar’; cf. <mentioned corresp="#mentioned_d1664e220" xml:id="mentioned_d1664e308" xml:lang="sa"><lang/>
                        <w>rav-</w>
                        <gloss><q>roar</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e228" xml:id="mentioned_d1664e316" xml:lang="sa"><w/>
                        <gloss><q>make noises</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e234" xml:id="mentioned_d1664e322" xml:lang="sa"><w/>
                        <gloss><q>rattle</q></gloss></mentioned>, <mentioned xml:id="mentioned_d1664e328" xml:lang="sa"><w>rāuti,
                            ravati, ruvati</w>
                        <gloss><q>he is roaring</q></gloss></mentioned>, <mentioned xml:id="mentioned_d1664e334" xml:lang="ru"><lang/>
                        <w>revetʼ</w>
                        <gloss><q>roar</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e252" xml:id="mentioned_d1664e343" xml:lang="grc"><lang/>
                        <w>ωρύομαι</w>
                        <gloss><q>let out a cry</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e260" xml:id="mentioned_d1664e351" xml:lang="grc"><w/>
                        <gloss><q>roar</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e266" xml:id="mentioned_d1664e357" xml:lang="la"><lang/>
                        <w>rumor</w>
                        <gloss><q>noise</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e274" xml:id="mentioned_d1664e365" xml:lang="la"><w>ravus</w>
                        <gloss><q>hoarse</q></gloss></mentioned> etc.; as for Iranian languages,
                    maybe the following words are related to it as well: <mentioned corresp="#mentioned_d1664e280" xml:id="mentioned_d1664e371" xml:lang="wbl"><lang/>
                        <w>varüy- : varoid-</w></mentioned>, <mentioned corresp="#mentioned_d1664e285" xml:id="mentioned_d1664e376" xml:lang="srh"><lang/>
                        <w>varau-: varüd-</w>
                        <gloss><q>howl</q></gloss></mentioned>, <mentioned corresp="#mentioned_d1664e294" xml:id="mentioned_d1664e385" xml:lang="srh"><w/>
                        <gloss><q>bark</q></gloss></mentioned> (<bibl><ref type="bibl" target="#ref_Shaw"/><biblScope>XLV 225</biblScope></bibl>).</etym>
