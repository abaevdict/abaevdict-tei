<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_arǧaw"
    xml:lang="os">
    <form type="lemma">
        <orth>arǧaw</orth>
    </form>
    <sense>
        <cit type="translation" xml:lang="ru">
            <q>сказка</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>tale</q>
        </cit>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>(gædy) kʼonajyl x˳yssy, arǧæwttæ mysy</quote>
            <cit type="translation" xml:lang="ru">
                <q>(кот) лежит у очага, сочиняет сказки</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>(the cat) lies by the hearth, composes fairy tales</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>113</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>Kʼobalajy arǧaw</quote>
            <cit type="translation" xml:lang="ru">
                <q>сказка о Кобала</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the tale of Kobala</q>
            </cit>
            <bibl>
                <ref target="#src_ЮОПам."/>
                <biblScope>III 163</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>badʒænæn æ cori atæ, kængæj in arǧæwttæ sædæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>я буду вот так сидеть возле нее, рассказывая ей сотни сказок</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I will sit next to her like this, telling her hundreds of fairy tales</q>
            </cit>
            <bibl>
                <ref target="#src_Gurdž._Æduli"/>
                <biblScope>78</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>robasi arǧaw dær zonun</quote>
            <cit type="translation" xml:lang="ru">
                <q>я знаю также сказку про лису</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I also know a fairy tale about a fox</q>
            </cit>
            <bibl>
                <ref target="#src_Gurdž._Æduli"/>
                <biblScope>87</biblScope>
            </bibl>
        </cit>
    </cit>
