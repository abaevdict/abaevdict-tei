            <entry xml:id="entry_ax0yr" xml:lang="os">
                <form xml:id="form_d5627e66" xml:lang="os-x-iron" type="lemma"><orth>ax˳yr</orth></form>
                <form xml:id="form_d5627e69" xml:lang="os-x-digor" type="dialectal"><orth>axur</orth></form>
