                        </abv:tr><abv:tr xml:lang="en">
                            <q>trained</q>
                        </abv:tr></sense><sense xml:id="sense_d5627e111"><abv:tr xml:lang="ru">
                            <q>обученный</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>taught</q>
