                    </sense>
                </sense>
                <sense xml:id="sense_d5627e92">
                    <sense xml:id="sense_d5627e93">
                        <abv:tr xml:lang="ru">
                            <q>ученый</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>learned</q>
                        </abv:tr>
                    </sense>
                    <sense xml:id="sense_d5627e102">
                        <abv:tr xml:lang="ru">
                            <q>приученный</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>trained</q>
                        </abv:tr>
                    </sense>
                    <sense xml:id="sense_d5627e111">
                        <abv:tr xml:lang="ru">
                            <q>обученный</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>taught</q>
