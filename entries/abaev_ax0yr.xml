                <re xml:id="re_d5627e130">
                    <re xml:id="re_d5627e132">
                        <form xml:id="form_d5627e134" type="lemma"><orth>ax˳yr kænyn</orth></form>
                        <sense xml:id="sense_d5627e137"><sense xml:id="sense_d5627e138"><abv:tr xml:lang="ru">
                                    <q>учить</q>
                                </abv:tr><abv:tr xml:lang="en">
                                    <q>teach</q>
                                </abv:tr></sense><sense xml:id="sense_d5627e147"><abv:tr xml:lang="ru">
                                    <q>учиться</q>
                                </abv:tr><abv:tr xml:lang="en">
                                    <q>study</q>
                                </abv:tr></sense><sense xml:id="sense_d5627e156"><abv:tr xml:lang="ru">
