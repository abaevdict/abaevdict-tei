            <entry xml:id="entry_ax0yr" xml:lang="os" abv:completeness="complete">
                <?oxy_comment_start author="oleg" timestamp="20240124T155331+0300" comment="checked"?>
                <form xml:id="form_d5627e66" xml:lang="os-x-iron" type="lemma"
                    ><orth>ax˳yr</orth></form><?oxy_comment_end?>
                <form xml:id="form_d5627e69" xml:lang="os-x-digor" type="dialectal"
                        ><orth>axur</orth></form>
                <sense xml:id="sense_d5627e72">
                    <sense xml:id="sense_d5627e73">
                        <abv:tr xml:lang="ru">
                            <q>ученье</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>learning</q>
                        </abv:tr>
                    </sense>
                    <sense xml:id="sense_d5627e82">
                        <abv:tr xml:lang="ru">
                            <q>привычка</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>habit</q>
