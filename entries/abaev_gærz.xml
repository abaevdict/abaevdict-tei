    <form xml:lang="os-x-digor" type="dialectal"><orth>gærzæ</orth></form>
    <sense><cit type="translation" xml:lang="ru">
            <q>ремень</q>
        </cit><cit type="translation" xml:lang="en">
            <q>strap</q>
        </cit></sense>
    <re><form type="lemma"><orth>gærz ron</orth></form><sense><cit type="translation" xml:lang="ru">
                <q>ременной пояс</q>
            </cit><cit type="translation" xml:lang="en">
