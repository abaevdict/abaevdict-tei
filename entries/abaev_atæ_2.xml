    n="2" xml:lang="os-x-digor">
    <form type="lemma"><orth>atæ</orth></form>
    <sense><cit type="translation" xml:lang="ru">
            <q>так</q>
        </cit></sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>ku næ bafærazaj atæ bastæj?</quote>
            <cit type="translation" xml:lang="ru">
                <q>выдержишь ли ты привязанный таким образом?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>can you stand being tied like this?</q>
            </cit>
            <bibl><ref target="#src_СОПам."/><biblScope>II 64</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>sumax atæ læwwetæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>вы стойте так</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>you, stand like this</q>
            </cit>
            <bibl><ref target="#src_MSt."/><biblScope>10%l12%l</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>cæbæl atitæ niccajtæ?</quote>
            <cit type="translation" xml:lang="ru">
                <q>почему вы стали такие (искалеченные)?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>why did you become such (crippled)?</q>
            </cit>
            <bibl><ref target="#src_Диг._сказ."/><biblScope>25</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>ærbadæ atæ mæ cori</quote>
            <cit type="translation" xml:lang="ru">
                <q>садись вот так возле меня</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>sit next to me like this</q>
            </cit>
            <bibl><ref target="#src_ОЭ"/><biblScope>I 98</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>badʒænæn æ cori atæ, otæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>буду сидеть возле нее вот так, вот этак</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I will sit next to her like this, like that</q>
            </cit>
            <bibl><ref target="#src_Gurdž._Æduli"/><biblScope>78</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>atæ cæmæn æj næ cavtajtæ (gaccaj)?</quote>
            <cit type="translation" xml:lang="ru">
                <q>почему вы не ударили (суку) вот так?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>why didn't you hit (bitch) like this?</q>
            </cit>
            <bibl><ref target="#src_ОЭ"/><biblScope>I 102</biblScope></bibl>
        </cit>
    </cit>
