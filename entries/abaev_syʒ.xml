      <entry xml:id="entry_syʒ" xml:lang="os" abv:completeness="english-questions">
        <form xml:id="form_d3608e66" type="lemma" xml:lang="os-x-iron"><orth>syʒ</orth></form>
        <form xml:lang="os-x-digor" type="dialectal"><orth>siʒæ</orth></form>
        <sense>
          <sense xml:id="sense_d3608e69">
            <abv:tr xml:lang="ru">
              <q>зад</q>
            </abv:tr>
            <abv:tr xml:lang="en">
              <q>backside</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>задняя часть</q>
            </abv:tr>
            <abv:tr xml:lang="en">
              <q>rear end</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>задница</q>
            </abv:tr>
            <abv:tr xml:lang="en">
