    xml:id="entry_ʒyvyldar" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>ʒyvyldar</orth>
        <form type="variant">
            <orth>ʒybyldar</orth>
        </form>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
