<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_ʒīʒa_1" n="1" xml:lang="os">
    <form type="lemma"><orth>ʒīʒa</orth></form>
    <sense><cit type="translation" xml:lang="ru">
            <q>мясо</q>
        </cit><cit type="translation" xml:lang="en">
            <q>meat</q>
        </cit></sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>wælart æxsævær fyxtis, ænæqæn saǵy ʒīʒatæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>а огне варился ужин, мясо целого оленя</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>dinner was cooked on the fire, meat of a whole deer</q>
            </cit>
            <bibl><ref target="#src_Christ."/><biblScope>26</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>ʒīʒajy mūr dyn dæ zærdæ fælæwwyn kænʒæn</quote>
            <cit type="translation" xml:lang="ru">
                <q>кусочек мяса укрепит твое сердце</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>a piece of meat will strengthen your heart</q>
            </cit>
            <bibl><ref target="#src_Сека"/><biblScope>51</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>jæ kʼæssujy ʒīʒatæ īs</quote>
            <cit type="translation" xml:lang="ru">
                <q>в мешке у нее мясо</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>she has meat in the bag</q>
            </cit>
            <bibl><ref target="#src_Брит."/><biblScope>73</biblScope></bibl>
        </cit>
    </cit>
