        <cit type="exampleGroup">
                <cit type="example">
                        <quote>ūj mæ jæ madyl sardydta</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>она (девушка) пожаловалась на меня своей матери</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>she (girl) complained about me to her mother</q>
                        </cit>
                        <bibl>
                                <ref target="#src_Munk."/>
                                <biblScope>198</biblScope>
                        </bibl>
                </cit>
                <cit type="example">
                        <quote>kujty jyl sardaw</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>натрави на него собак</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>set dogs on him</q>
                        </cit>
                        <bibl>
                                <ref target="#src_Брит."/>
                                <biblScope>30</biblScope>
                        </bibl>
                </cit>
                <cit type="example">
                        <quote>Cæraj je ʽrvadælty ḱyzǵytæj īwy sardydta, cæmæj bazona
                                Farizety</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>Царай подговорил одну девушку из своих родичей, чтобы она
                                        познакомилась с Фаризет</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>Tsarai persuaded one of his relatives to meet Farizet</q>
                        </cit>
                        <bibl>
                                <ref target="#src_Čerm."/>
                                <biblScope>130</biblScope>
                        </bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect">
                                <lang/>
                        </usg>
                        <quote>ærcudæj Asægoj osæmæ ma ʽj ardawun bajdædta</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>пришла к жене Асаго и стала ее подстрекать</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>she came to Asago's wife and began to incite her</q>
                        </cit>
                        <bibl>
                                <ref target="#src_MSt."/>
                                <biblScope>11%l12%l</biblScope>
                        </bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect">
                                <lang/>
                        </usg>
                        <quote>ær-cæj-cæwæd i wælmærdmæ nur Kʼunʒaj furt, mæ ardawæg</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>пусть придет теперь на могилу сын Кундза, мой подстрекатель</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>let Kundz's son, my instigator, come to the grave now</q>
                        </cit>
                        <bibl>
                                <ref target="#src_Iræf"/>
                                <biblScope>43</biblScope>
                        </bibl>
                </cit>
                <cit type="example">
                        <quote>æz fesafton Ʒanʒiraqi eske ardud, eske lasæj</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>я погубил Дзандзирак по чужому наущению, по чужой вине</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>I ruined Dzandzirak because of someone else's instigation,
                                        because of someone else's fault</q>
                        </cit>
                        <bibl>
                                <ref target="#src_Iræf"/>
                                <biblScope>43</biblScope>
                        </bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect">
                                <lang/>
                        </usg>
                        <quote>ke ibæl isardawon?</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>кого на него натравить?</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>who to set on him?</q>
                        </cit>
                        <bibl>
                                <ref target="#src_Gurdž._Æduli"/>
                                <biblScope>77</biblScope>
                        </bibl>
                </cit>
        </cit>
