      <entry xml:id="entry_sabyr" xml:lang="os" abv:completeness="incomplete">
        <form xml:id="form_d3888e66" type="lemma" xml:lang="os-x-iron"><orth>sabyr</orth></form>
        <form xml:lang="os-x-digor" type="dialectal"><orth>sabur</orth></form>
        <sense xml:id="sense_d3888e69">
          <abv:tr xml:lang="ru">
            <q>тихий</q>
            <note type="type_x2k_xgd_z5b"> </note>
            <note type="comment">(в смысле и <q>негромкий</q> и <q>не быстрый</q>)</note>
          </abv:tr>
          <abv:tr xml:lang="ru">
            <q xmlns="">смирный</q>
          </abv:tr>
          <abv:tr xml:lang="ru">
            <q xmlns="">кроткий</q>
          </abv:tr>
          <abv:tr xml:lang="ru">
            <q xmlns="">спокойный</q>
          </abv:tr>
          <abv:tr xml:lang="ru">
            <q xmlns="">безмолвный</q>
          </abv:tr>
          <re>
            <form type="lemma"><orth>sabyr kænyn</orth></form>
            <sense>
              <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
                <q xmlns="http://www.tei-c.org/ns/1.0">успокаивать</q>
              </tr>
            </sense>
          </re>
          <re>
            <form type="lemma"><orth><m>ær-</m>, <m>ba-</m>, <m>fæ-</m>, nyssabyr wyn</orth></form>
            <sense>
              <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
                <q xmlns="http://www.tei-c.org/ns/1.0">успокоиться</q>
              </tr>
              <abv:tr xml:lang="ru">
                <q xmlns="">утихнуть</q>
              </abv:tr>
            </sense>
          </re>
          <re>
            <form type="lemma"><orth>saburgaj</orth></form>
            <sense>
              <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
                <q xmlns="http://www.tei-c.org/ns/1.0">тихо</q>
              </tr>
              <abv:tr xml:lang="ru">
                <q xmlns="">потихоньку</q>
              </abv:tr>
              <abv:tr xml:lang="ru">
                <q xmlns="">постепенно</q>
              </abv:tr>
              <abv:tr xml:lang="ru">
                <q xmlns="">мало-помалу</q>
              </abv:tr>
            </sense>
          </re>
          <re>
            <form type="lemma"><orth>saburad</orth><form type="variant"
                ><orth>saburʒīnad</orth></form></form>
            <sense>
              <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
                <q xmlns="http://www.tei-c.org/ns/1.0">тишина</q>
              </tr>
              <abv:tr xml:lang="ru">
                <q xmlns="">мир</q>
              </abv:tr>
              <abv:tr xml:lang="ru">
                <q xmlns="">спокойствие</q>
              </abv:tr>
            </sense>
          </re>
          <?oxy_comment_start author="админ" timestamp="20220925T174311+0300" comment="2 точки"?>
        </sense>
        <exampleGrp xmlns="http://ossetic-studies.org/ns/abaevdict"><?oxy_comment_end?>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">xīstær Ḱabæxan... sabyr, ænkʼard x˳yz,
              fælūrsdær jæ cæskom</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">старшая (дочь) Чабахан — тихая, грустного вида,
                бледнее лицом»</q>
            </tr>
            <note type="comment" xmlns="http://www.tei-c.org/ns/1.0">(<bibl><ref type="bibl"
                  target="#src_Коста"/>
                <biblScope>137</biblScope></bibl>)</note>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">læppū sabyræj zaǧta</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">юноша сказал тихо</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#ref_ОТ"/>
              <biblScope>79</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">Berd — sabyr æmæ ræstkūsæg læg</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">Берд — тихий и честный в труде человек</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Сека"/>
              <biblScope>12</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">sabyr ræwæd dywwæ mady dæjy</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">смирный теленок двух маток сосет</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#ref_ЮОПам."/>
              <biblScope>III 222</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">næ qæwbæsty ūmæj xwyzdær læppū næj, qarūǵyn,
              sabyr mælʒyg jæ kʼæxy byn næ jækænʒæn</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">в нашем округе нет юноши лучше него, способный,
                кроткий, муравья не придавит ногой</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Сека"/>
              <biblScope>81</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">tæxūdiag sty sabyrtæ</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">блаженны кроткие</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Матфей"/>
              <biblScope>5 5</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">sabyr!</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">тихо</q>
            </tr>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">fæsabyr sæ qær</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">затих их шум</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Коста"/>
              <biblScope>101</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">adæm ærsabyr sty</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">народ успокоился</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Сека"/>
              <biblScope>54</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">bæstæ nyssabyr</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">все затихло</q>
            </tr>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">wæ xorzæxæj fæsabyr ūt!</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">сделайте милость, успокойтесь!</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Брит."/>
              <biblScope>7</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">jæ zaḱʼetæ sabyrgomaw dywwæ kʼūxæj ærlæǧz
              kæny</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">свою бороду медленно поглаживает двумя
                рукамxи</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Хар._Кадӕг"/>
              <biblScope>17</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">i mærǧti xarun i ǧædi medæg ku fæssabyr
              æj...</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">когда в лесу замолкло пение птиц...</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Iræf"/>
              <biblScope>34</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">dwar saburgaj niqqæsqæs kænʒænæj</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">дверь тихо заскрипит</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Диг._сказ."/>
              <biblScope>20</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">saburgajsæmæ baburdæj</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">потихоньку он подкрался к ним</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Диг._сказ."/>
              <biblScope>48</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">eci ǧærmæ ba imæ saburgomaw zærond qæræw læg
              racudæj</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">на этот крик к нему медленно вышел кривой
                (одноглазый) старик</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_MSt."/>
              <biblScope>23₅</biblScope></bibl>
          </example>
        </exampleGrp>
