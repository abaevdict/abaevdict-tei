<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_caj"
    xml:lang="os">
    <form type="lemma"><orth>caj</orth></form>
    <sense><cit type="translation" xml:lang="ru">
            <q>чай (напиток)</q>
        </cit><cit type="translation" xml:lang="en">
            <q>tea (drink)</q>
        </cit></sense>
    <re><form type="lemma"><orth>cajgærdæg</orth></form><sense><cit type="translation" xml:lang="ru">
                <q>чай (растение)</q>
            </cit><cit type="translation" xml:lang="en">
                <q>tea (plant)</q>
            </cit></sense></re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>adǵyn caj cymʒynæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>ты будешь пить сладкий чай</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>you will drink sweet tea</q>
            </cit>
            <bibl><ref target="#src_Коста"/><biblScope>121</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>cajcymæn (ag˳yvzæ)</quote>
            <cit type="translation" xml:lang="ru">
                <q rendition="singlequotes">чайный стакан</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q rendition="singlequotes">tea glass</q>
            </cit>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>zakʼuskaj xæccæ cajcumæntæ beræ raniwazta</quote>
            <cit type="translation" xml:lang="ru">
                <q>с закуской он выпил много чайных стаканов</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he drank a lot of tea glasses with a snack</q>
            </cit>
            <bibl><ref target="#src_SD"/><biblScope>176%l4%l</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>tævdæ bæstiti iræzuncæ kofe bælæstæ, cajgærdægi kʼotærtæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>в жарких странах растут кофейные деревья, кусты чая</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>coffee trees, tea bushes grow in warm countries</q>
            </cit>
            <bibl><ref target="#src_AK"/><biblScope>I 46</biblScope></bibl>
        </cit>
    </cit>
