    xml:id="entry_ædærsgæ" xml:lang="os">
    <form type="lemma"><orth>ædærsgæ</orth></form>
    <sense><sense><cit type="translation" xml:lang="ru">
                <q>смело</q>
            </cit><cit type="translation" xml:lang="en">
                <q>boldly</q>
            </cit></sense><sense><cit type="translation" xml:lang="ru">
                <q>свободно</q>
            </cit><cit type="translation" xml:lang="en">
                <q>freely</q>
            </cit></sense></sense>
    <sense><sense><cit type="translation" xml:lang="ru">
                <q>старательно</q>
            </cit><cit type="translation" xml:lang="en">
                <q>diligently</q>
            </cit></sense><sense><cit type="translation" xml:lang="ru">
                <q>как следует</q>
            </cit><cit type="translation" xml:lang="en">
                <q>properly</q>
            </cit></sense></sense>
    <cit type="exampleGroup">
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>cættæ ’j dæddunmæ mæ curd fat nixk’urcc ældartæn ædærsgæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>моя быстрая пуля готова, не боясь, дать отпор князьям</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>my quick bullet is ready, without fear, to fight back the princes</q>
            </cit>
            <bibl><ref target="#src_Iræf"/><biblScope>71</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>mardtan æznag ædærsgæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>мы поражали врага смело</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>we hit the enemy bravely</q>
            </cit>
            <bibl><ref target="#src_Sam."/><biblScope>149</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>ʒūryn ḱī wændy ūj bærc ædærsgæ ærramæ!</quote>
            <cit type="translation" xml:lang="ru">
                <q>кто отважится говорить свободно с сумасшедшим!</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>who dares to speak freely with a madman!</q>
            </cit>
            <bibl><ref target="#src_Коста"/><biblScope>97</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>ædærsgæ sæ nwærsta aly byzǧ˳yrty</quote>
            <cit type="translation" xml:lang="ru">
                <q>(мать) их (детей) старательно кутала во всякое тряпье</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>(mother) wrapped up them (children) carefully in rags</q>
            </cit>
            <bibl><ref target="#src_Коста"/><biblScope>46</biblScope></bibl>
        </cit>
    </cit>
