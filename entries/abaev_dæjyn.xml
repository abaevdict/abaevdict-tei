    <text>
        <body>
            <entry xml:id="entry_dæjyn" xml:lang="os">
                <form xml:lang="os-x-iron" type="lemma"><orth>dæjyn</orth><form type="participle"
                            ><orth>dad</orth></form></form>
                <form xml:lang="os-x-digor" type="dialectal"><orth>dæjun</orth><form
                        type="participle"><orth>dad</orth></form></form>
                <sense><abv:tr xml:lang="ru">
                        <q>сосать грудь, вымя</q>
                    </abv:tr><abv:tr xml:lang="en">
                        <q>suckle</q>
                    </abv:tr></sense>
                <re>
                    <form type="lemma"><orth>ʒiʒi-daj</orth></form>
                    <sense><abv:tr xml:lang="ru">
                            <q>сосун</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>suckling</q>
                        </abv:tr></sense>
                </re>
                <re>
                    <form type="lemma"><orth>ʒīʒī dæjyn</orth></form>
                    <sense><abv:tr xml:lang="ru">
                            <q>сосать грудь</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>suckle breast</q>
                        </abv:tr></sense>
                </re>
                <abv:exampleGrp>
                    <abv:example>
                        <quote>sabyr ræwæd dywwæ mady dæjy</quote>
                        <abv:tr xml:lang="ru">
                            <q>ласковый теленок двух маток сосет</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>tender calf suckle two mothers</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_ЮОПам."/><biblScope>III
                            222</biblScope></bibl>
                    </abv:example>
                </abv:exampleGrp>
                <etym xml:lang="ru">Хорошо известный в индоевропейских языках глагол с колебанием
                    значения: ‘сосать грудь’ — ‘кормить грудью’ — ‘доить’. Ср. <mentioned
                        xml:lang="fa"><lang/>
                        <w>dāya</w></mentioned>, <mentioned xml:lang="pal"><lang/>
                        <w>dāyak</w>
                        <gloss><q>кормилица</q></gloss></mentioned>, <mentioned xml:lang="pal"><w/>
                        <gloss><q>нянька</q></gloss></mentioned>, <mentioned xml:lang="ku"><lang/>
                        <w>da</w>
                        <gloss><q>мать</q></gloss></mentioned>, <mentioned xml:lang="ku"><w>dāin</w>
                        <gloss><q>кормилица</q></gloss></mentioned>, <mentioned xml:lang="ku"><w/>
                        <gloss><q>мать</q></gloss></mentioned>, <mentioned xml:lang="yai"><lang/>
                        <w>di-</w>
                        <gloss><q>сосать</q></gloss></mentioned>, <mentioned xml:lang="sog"><lang/>
                        <w>*δāy-(δ'y-)</w>
                        <gloss><q>служанка</q></gloss></mentioned>, <mentioned xml:lang="sa"><lang/>
                        <w>dhāy-</w></mentioned>, <mentioned xml:lang="sa"><w>dhayati</w>
                        <gloss><q>сосать</q></gloss></mentioned>, <mentioned xml:lang="cu"><lang/>
                        <w n="0">доити</w></mentioned>, <mentioned xml:lang="ru"><lang/>
                        <w>доить</w></mentioned>, <mentioned xml:lang="lv"><lang/>
                        <w>dȇju</w>
                        <gloss><q>сосу грудь, молоко</q></gloss></mentioned>, <mentioned
                        xml:lang="lv"><w>dȇt</w>
                        <gloss><q>сосать</q></gloss></mentioned>, <mentioned xml:lang="xcl"><lang/>
                        <w>diem</w>
                        <gloss><q>я сосу грудь</q></gloss></mentioned>, <mentioned xml:lang="xcl"
                            ><w>dayeak</w>
                        <gloss><q>кормилица</q></gloss></mentioned>, <mentioned xml:lang="got"><lang/>
                        <w>daddjan</w><note type="comment" xml:lang="ru"> (из
                            *%idajjan%i)</note>
                        <gloss><q>кормить грудью</q></gloss></mentioned>, <mentioned xml:lang="grc"><lang/>
                        <w>θάω</w></mentioned>, <mentioned xml:lang="grc"><w>θήσθαι</w></mentioned>
                    и пр. (<bibl><ref type="bibl" target="#ref_Pokorny"/><biblScope xml:lang="ru"
                            >241 сл.</biblScope></bibl>).%n<bibl><ref type="bibl"
                            target="#ref_Вс._Миллер._ОЭ"/><biblScope>II 77</biblScope></bibl>;
                            <bibl><ref type="bibl" target="#ref_Вс._Миллер._Gr."/><biblScope>30,
                            64</biblScope></bibl>. — <bibl><ref type="bibl"
                            target="#ref_Hübschmann._Oss."/><biblScope>35</biblScope></bibl>. —
                            <bibl><ref type="bibl" target="#ref_ОЯФ_I"
                        /><biblScope>24</biblScope></bibl>.</etym>
                <etym xml:lang="en">A verb that is well known in Indo-European languages with
                    meaning variations: ‘suckle breast’ — ‘breast-feed’ — ‘milk’. Cf. <mentioned
                        xml:lang="fa"><lang/>
                        <w>dāya</w></mentioned>, <mentioned xml:lang="pal"><lang/>
                        <w>dāyak</w>
                        <gloss><q>wet-nurse</q></gloss></mentioned>, <mentioned xml:lang="pal"><w/>
                        <gloss><q>nurse</q></gloss></mentioned>, <mentioned xml:lang="ku"><lang/>
                        <w>da</w>
                        <gloss><q>mother</q></gloss></mentioned>, <mentioned xml:lang="ku"
                            ><w>dāin</w>
                        <gloss><q>wet-nurse</q></gloss></mentioned>, <mentioned xml:lang="ku"><w/>
                        <gloss><q>mother</q></gloss></mentioned>, <mentioned xml:lang="yai"><lang/>
                        <w>di-</w>
                        <gloss><q>suck</q></gloss></mentioned>, <mentioned xml:lang="sog"><lang/>
                        <w>*δāy-(δ'y-)</w>
                        <gloss><q>servant</q></gloss></mentioned>, <mentioned xml:lang="sa"><lang/>
                        <w>dhāy-</w></mentioned>, <mentioned xml:lang="sa"><w>dhayati</w>
                        <gloss><q>suck</q></gloss></mentioned>, <mentioned xml:lang="cu"><lang/>
                        <w>doiti</w></mentioned>, <mentioned xml:lang="ru"><lang/>
                        <w>doitʼ</w></mentioned>, <mentioned xml:lang="lv"><lang/>
                        <w>dȇju</w>
                        <gloss><q>I suckle breast, milk</q></gloss></mentioned>, <mentioned
                        xml:lang="lv"><w>dȇt</w>
                        <gloss><q>suck</q></gloss></mentioned>, <mentioned xml:lang="xcl"><lang/>
                        <w>diem</w>
                        <gloss><q>I suckle breast</q></gloss></mentioned>, <mentioned xml:lang="xcl"
                            ><w>dayeak</w>
                        <gloss><q>wet-nurse</q></gloss></mentioned>, <mentioned xml:lang="got"><lang/>
                        <w>daddjan</w><note type="comment" xml:lang="en"> (from
                            *%idajjan%i)</note>
                        <gloss><q>breast-feed</q></gloss></mentioned>, <mentioned xml:lang="grc"><lang/>
                        <w>θάω</w></mentioned>, <mentioned xml:lang="grc"><w>θήσθαι</w></mentioned>
                    etc. (<bibl><ref type="bibl" target="#ref_Pokorny"/><biblScope xml:lang="en">241
                            ff.</biblScope></bibl>).%n<bibl><ref type="bibl"
                            target="#ref_Вс._Миллер._ОЭ"/><biblScope>II 77</biblScope></bibl>;
                            <bibl><ref type="bibl" target="#ref_Вс._Миллер._Gr."/><biblScope>30,
                            64</biblScope></bibl>. — <bibl><ref type="bibl"
                            target="#ref_Hübschmann._Oss."/><biblScope>35</biblScope></bibl>. —
                            <bibl><ref type="bibl" target="#ref_ОЯФ_I"
                        /><biblScope>24</biblScope></bibl>.</etym>
            </entry>
