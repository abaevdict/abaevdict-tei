            <entry xml:id="entry_æmtʼery" xml:lang="os-x-iron">
                <form type="lemma"><orth>æmtʼery</orth></form>
                <usg><lang/></usg>
                <sense><sense><abv:tr xml:lang="ru">
                            <q>смешение</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>mixing</q>
                        </abv:tr></sense><sense><abv:tr xml:lang="ru">
                            <q>хаос</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>chaos</q>
                        </abv:tr></sense></sense>
                <abv:exampleGrp>
                    <abv:example>
                        <quote>adæm sæmtʼery sty</quote>
                        <abv:tr xml:lang="ru">
                            <q>народ смешался, обратился в беспорядочную толпу</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>people mixed up, turned into a messy crowd</q>
                        </abv:tr>
                    </abv:example>
                    <abv:example>
                        <quote>mīǧtæ fæstæjæ æmtʼeryjæ wajync</quote>
                        <abv:tr xml:lang="ru">
                            <q>тучи бегут сзади хаотической массой</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>chaotic mass of clouds is running behind</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Niger"
                            /><biblScope>134</biblScope></bibl>
                    </abv:example>
                </abv:exampleGrp>
                <etym xml:lang="ru">Ср. <mentioned xml:lang="ka"><lang/>
                        <w>mt’veri</w>
                        <gloss><q>пыль</q></gloss></mentioned>, <mentioned xml:lang="ka"><w/>
                        <gloss><q>прах</q></gloss></mentioned>, <mentioned xml:lang="ka"><lang/>
                        <w>mt’vreva</w>
                        <gloss><q>ломать</q></gloss></mentioned>, <mentioned xml:lang="ka"><w/>
                        <gloss><q>крушить</q></gloss></mentioned>.</etym>
                <etym xml:lang="en">Cf. <mentioned xml:lang="ka"><lang/>
                        <w>mt’veri</w>
                        <gloss><q>dust</q></gloss></mentioned>, <mentioned xml:lang="ka"><lang/>
                        <w>mt’vreva</w>
                        <gloss><q>break</q></gloss></mentioned>, <mentioned xml:lang="ka"><w/>
                        <gloss><q>destroy</q></gloss></mentioned>.</etym>
