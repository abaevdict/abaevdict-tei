      <entry xml:id="entry_særyl" xml:lang="os" abv:completeness="incomplete">
        <form xml:id="form_d2526e66" type="lemma" xml:lang="os-x-iron"><orth>særyl</orth></form>
        <form xml:lang="os-x-digor" type="dialectal"><orth>særbæl</orth></form>
        <sense xml:id="sense_d2526e69">
          <sense>
            <abv:tr xml:lang="ru">
              <q>за</q>
            </abv:tr>
            <abv:tr xml:lang="en">
              <q>for</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>ради</q>
            </abv:tr>
            <abv:tr xml:lang="en">
              <q>for the sake</q>
            </abv:tr>
          </sense>
          <note xml:lang="ru" type="comment"> (послелог)</note>
          <note xml:lang="en" type="comment"> (a postposition)</note>
        </sense>
        <exampleGrp xmlns="http://ossetic-studies.org/ns/abaevdict">
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">adæmy <oRef>særyl</oRef> jæ ūd
              ærxasta</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">он принес свою душу (в жертву) за народ</q>
            </tr>
            <tr xml:lang="en">
              <q xmlns="http://www.tei-c.org/ns/1.0">he sacrificed his soul for the sake of
                people</q>
            </tr>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">mæ <oRef>særyl</oRef> jæ ūd ḱi fesafʒæn, ūj
              jæ baværʒæn</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">кто потеряет душу свою ради меня, тот сбережет
                ее</q>
            </tr>
            <tr xml:lang="en">
              <q xmlns="http://www.tei-c.org/ns/1.0">whoever loses his soul for my sake will save
                it</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Марк"/>
              <biblScope><hi rendition="#rend_italic">8</hi> 35</biblScope></bibl>
          </example>
        </exampleGrp>
        <etym xml:lang="ru">Местный внешний падеж от <ref type="xr" target="#entry_sær"><w>sær</w>
            <gloss><q>голова</q></gloss></ref>, q. v.</etym>
        <etym xml:lang="en">It is a locative case form of <ref type="xr" target="#entry_sær"><w>sær</w>
            <gloss><q>head</q></gloss></ref>, q. v.</etym>
      </entry>
