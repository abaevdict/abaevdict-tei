        <sense>
                <cit type="translation" xml:lang="ru">
                        <q>показывать</q>
                </cit>
                <cit type="translation" xml:lang="en">
                        <q>to show</q>
                </cit>
        </sense>
        <cit type="exampleGroup">
                <cit type="example">
                        <quote>Xæmyc æj k˳y fedta, wæd æm jæ dændag ravdysta</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>когда Хамыц ее увидел, он показал ей свой зуб</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>when Xamyc saw her, he showed her his teeth</q>
                        </cit>
                        <bibl>
                                <ref target="#src_ОЭ"/>
                                <biblScope>I 38</biblScope>
                        </bibl>
                </cit>
                <cit type="example">
                        <quote>dæ qarū nyn ravdīs!</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>покажи нам свою доблесть!</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>show your valour to us!</q>
                        </cit>
                        <bibl>
                                <ref target="#src_Коста"/>
                                <biblScope>60</biblScope>
                        </bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect">
                                <lang/>
                        </usg>
                        <quote>læqwæn adærn sæ lægiǧædæ ævdesuncæ</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>молодёжь показывает свое мужество</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>the young men display courage</q>
                        </cit>
                        <bibl>
                                <ref target="#src_MSt."/>
                                <biblScope>13%l10—11%l</biblScope>
                        </bibl>
                </cit>
                <cit type="example" xml:lang="os-x-digor">
                        <usg type="dialect">
                                <lang/>
                        </usg>
                        <quote>oj bavdist æj xæzgoldarbæl</quote>
                        <cit type="translation" xml:lang="ru">
                                <q>ее ославили („показали“) как имеющую любовника</q>
                        </cit>
                        <cit type="translation" xml:lang="en">
                                <q>she was defamed ("shown") as having an affair</q>
                        </cit>
                        <bibl>
                                <ref target="#src_Iræf"/>
                                <biblScope>43</biblScope>
                        </bibl>
                </cit>
        </cit>
