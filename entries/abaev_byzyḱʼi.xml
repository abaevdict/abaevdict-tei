    <cit type="exampleGroup">
        <cit type="example">
            <quote>fændyr yskʼaxta bærz byzyḱʼiījæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>он выдолбил %sфандыр%s из наплыва березы</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he hollowed out %sfandyr%s from the birch wart</q>
