        <re>
          <form type="lemma"><orth>zǧærcæg</orth></form>
          <sense>
            <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">кольчужное кольцо</q>
            </tr>
