      <entry xml:id="entry_zǧær" xml:lang="os" abv:completeness="russian-questions">
        <?oxy_comment_start author="oleg" timestamp="20230710T003656+0300" comment="Russian checked"?>
        <form xml:id="form_d561e66" type="lemma" xml:lang="os-x-iron"><orth>zǧær</orth></form><?oxy_comment_end?>
        <form xml:lang="os-x-digor" type="dialectal"><orth>æsqær</orth></form>
        <sense>
          <sense xml:id="sense_d561e69">
            <abv:tr xml:lang="ru">
              <q>доспехи</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>латы</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>панцирь</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>кольчуга</q>
            </abv:tr>
          </sense>
        </sense>
        <sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>броня</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>металл</q>
            </abv:tr>
          </sense>
        </sense>
        <re>
          <form type="lemma"
              ><orth><?oxy_comment_start author="irina" timestamp="20230509T104450+0300" comment="а как здесь сделать *?" flag="done"?>*<?oxy_comment_end?>zǧællag</orth></form>
          <sense>
            <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">металл</q>
            </tr>
          </sense>
          <note type="comment">(см.
              <?oxy_comment_start author="irina" timestamp="20230509T104550+0300" comment="у абаева просто g" flag="done"?><ref
              type="xr" target="#entry_zǧællagkom"/><?oxy_comment_end?>)</note>
        </re>
        <re>
          <form type="lemma"><orth>zǧærxædon</orth></form>
          <sense>
            <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">кольчуга</q>
            </tr>
          </sense>
        </re>
        <re>
          <form type="lemma"><orth>zǧærcong</orth></form>
          <sense>
            <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">налокотник</q>
            </tr>
          </sense>
        </re>
        <re>
          <form type="lemma"><orth>zǧærxūd</orth></form>
