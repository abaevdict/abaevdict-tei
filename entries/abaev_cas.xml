<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_cas"
    xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>cas</orth>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>cæjasæ</orth>
    </form>
    <sense>
        <cit type="translation" xml:lang="ru">
            <q>сколько</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>how much</q>
        </cit>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>cas fos askʼærdtat?</quote>
            <cit type="translation" xml:lang="ru">
                <q>сколько вы погнали скота?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>how much cattle did you drive?</q>
            </cit>
        </cit>
        <cit type="example">
            <quote>cas tyxǵyn rædyd dæn?</quote>
            <cit type="translation" xml:lang="ru">
                <q>насколько велика („сильна“) моя ошибка?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>how big ("strong") is my mistake?</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>121</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>cas mæg˳yrdær kodtoj, ūjas sæ kærʒynyl kodtoj rædawdær</quote>
            <cit type="translation" xml:lang="ru">
                <q>чем беднее они становились, тем щедрее они делались на хлеб</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the poorer they became, the more bread they became to give away</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>74</biblScope>
            </bibl>
        </cit>
    </cit>
    <cit type="exampleGroup">
        <cit type="example">
