<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_kond"
    xml:lang="os">
    <form type="lemma">
        <orth>kond</orth>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>строение</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>construction</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>устройство</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>arrangement</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>сложение</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>constitution</q>
            </cit>
        </sense>
    </sense>
    <re>
        <form type="lemma">
            <orth>xærzkond</orth>
        </form>
        <sense>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>хорошо сложенный</q>
                </cit>
                <cit type="translation" xml:lang="en">
                    <q>well-built</q>
                </cit>
            </sense>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>статный</q>
                </cit>
                <cit type="translation" xml:lang="en">
                    <q>stately</q>
                </cit>
            </sense>
        </sense>
    </re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>jæ wynd, jæ kondæn æmbal næ wydī</quote>
            <cit type="translation" xml:lang="ru">
                <q>ей не было равной по виду и сложению</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>she had no equal in appearance and constitution</q>
            </cit>
            <bibl>
                <ref target="#src_Нарт._сказ."/>
                <biblScope>25</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>dæ zærdæmæ ma xæss mæ zærdæjy kond</quote>
            <cit type="translation" xml:lang="ru">
                <q>не принимай близко к сердцу мой характер („устройство моего сердца“)</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>do not take my character to heart (“organization of my heart”)</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>14</biblScope>
            </bibl>
        </cit>
    </cit>
