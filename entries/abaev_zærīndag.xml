      <entry xml:id="entry_zærīndag" xml:lang="os" abv:completeness="complete">
        <form xml:id="form_d224e66" type="lemma" xml:lang="os-x-iron"><orth>zærīndag</orth></form>
        <form xml:lang="os-x-digor" type="dialectal"><orth>zærindagæ</orth></form>
        <sense xml:id="sense_d224e69">
          <abv:tr xml:lang="ru">
            <q>золотая нить</q>
          </abv:tr>
          <abv:tr xml:lang="en">
            <q>golden thread</q>
          </abv:tr>
        </sense>
        <exampleGrp xmlns="http://ossetic-studies.org/ns/abaevdict">
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">sæ zængættæ
              <oRef>zærīndagxudtæ</oRef></quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">их ноговицы вышиты золотой нитью</q>
            </tr>
            <tr xml:lang="en">
              <q xmlns="http://www.tei-c.org/ns/1.0">their gaiters are embroidered with gold
                thread</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_ИАС"/>
              <biblScope>II 449</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">saw nimætbæl <oRef>zærīndagxudtæ</oRef> kud
              ferttevuncæ...</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">как на черной бурке блестит вышивка золотом</q>
            </tr>
            <tr xml:lang="en">
              <q xmlns="http://www.tei-c.org/ns/1.0">how gold embroidery glitters on a black felt
                cloak</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_MD"/>
              <biblScope>1956 VII 52</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">æ særbæl ba <oRef>zærīndagæ</oRef> budtæj
              ǧæst xodæ</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">на голове его шапка, отделанная тесьмой из
                золотых нитей</q>
            </tr>
            <tr xml:lang="en">
              <q xmlns="http://www.tei-c.org/ns/1.0">on his head is a hat decorated with a braid of
                gold threads</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_MD"/>
              <biblScope>1949 II 31</biblScope></bibl>
          </example>
        </exampleGrp>
        <etym xml:lang="ru">См. <ref type="xr" target="#entry_zærīn"/> и <ref type="xr"
            target="#entry_tag"/>.</etym>
        <etym xml:lang="en">See <ref type="xr" target="#entry_zærīn"/> and <ref type="xr"
            target="#entry_tag"/>.</etym>
      </entry>
