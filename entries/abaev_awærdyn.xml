<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_awærdyn" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>awærdyn</orth>
        <form type="inflected" subtype="ptcp">
            <orth>awærst</orth>
        </form>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>awærdun</orth>
        <form type="inflected" subtype="ptcp">
            <orth>aurst</orth>
        </form>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>щадить</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>spare</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>жалеть</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>have mercy</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>экономить</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>save</q>
            </cit>
        </sense>
    </sense>
    <re>
        <form type="lemma">
            <orth>ænawærdon</orth>
        </form>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>беспощадный</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>merciless</q>
            </cit>
        </sense>
    </re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>ūj zon, Qyrym, æz, amal wævgæjæ, dæwæn nicy bacawærdʒynæn</quote>
            <cit type="translation" xml:lang="ru">
                <q>знай, Кирим, я, если есть возможность, ничего для тебя не пожалею</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>know, Kirim, I will not spare anything for you</q>
            </cit>
            <bibl>
                <ref target="#src_Брит."/>
                <biblScope>146</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>kæd færæz īs, wæd myl æxcajy tyxxæj ma bacawærd</quote>
            <cit type="translation" xml:lang="ru">
                <q>если есть возможность (помочь делу), то ты меня не щади в отношении денег</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>if there is an opportunity (to help the deal), then you do not spare me with
                    regard to money</q>
            </cit>
            <bibl>
                <ref target="#src_Сека"/>
                <biblScope>60</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>næ dæbæl awærdun</quote>
            <cit type="translation" xml:lang="ru">
                <q>я тебя не щажу</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I don't spare you</q>
            </cit>
            <bibl>
                <ref target="#src_MSt."/>
                <biblScope>24%l12%l</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>næwægʒaw æxsæni mulkbæl awærduj</quote>
            <cit type="translation" xml:lang="ru">
                <q>пионер бережет общественное добро</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>pioneer protects public property</q>
            </cit>
            <bibl>
                <ref target="#src_FS"/>
                <biblScope>V 7</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>eci togcʼirtæ kosæg adæmbæl næ aurstoj</quote>
            <cit type="translation" xml:lang="ru">
                <q>эти кровопийцы не щадили рабочий народ</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>these bloodsuckers did not spare the working people</q>
            </cit>
            <bibl>
                <ref target="#src_FS"/>
                <biblScope>V 117</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>gaʒa bīræg æfsæstæj dær næ awærdy læbūrynyl</quote>
            <cit type="translation" xml:lang="ru">
                <q>волчица даже сытая нещадно нападает</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the wolf female, even when well-fed, attacks mercilessly</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>41</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>nal awærsta znaggadyl</quote>
            <cit type="translation" xml:lang="ru">
                <q>он стал бесчинствовать нещадно</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he began to rampage mercilessly</q>
            </cit>
            <bibl>
                <ref target="#src_Čerm."/>
                <biblScope>51</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>ænawærdgæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>не щадя</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>without sparing</q>
            </cit>
            <cit type="translation" xml:lang="ru">
                <q>без пощады</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>without mercy</q>
            </cit>
            <bibl>
                <ref target="#src_Qazb."/>
                <biblScope>48</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>zærond Ilasi sæ ew ku isræxusta ænawærdonæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>один из них (буйволов) безжалостно боднул старого Иласа</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>one of them (buffalo) butted old Ilas mercilessly</q>
            </cit>
            <bibl>
                <ref target="#src_MD"/>
                <biblScope>1934 III—IV 83</biblScope>
            </bibl>
        </cit>
    </cit>
