            <entry xml:id="entry_ir" xml:lang="os">
                <form xml:id="form_d1567e66" xml:lang="os-x-iron" type="lemma"><orth>ir</orth></form>
                <form xml:id="form_d1567e69" xml:lang="os-x-digor" type="dialectal"><orth>iræ</orth></form>
