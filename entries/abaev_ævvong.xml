<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_ævvong" xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma"><orth>ævvong</orth></form>
    <form xml:lang="os-x-digor" type="dialectal"><orth>ærvong</orth></form>
    <sense><sense><cit type="translation" xml:lang="ru">
                <q>готовый</q>
            </cit><cit type="translation" xml:lang="en">
                <q>ready</q>
            </cit></sense><sense><cit type="translation" xml:lang="ru">
                <q>достающийся без труда</q>
            </cit><cit type="translation" xml:lang="en">
                <q>easy-going</q>
            </cit></sense></sense>
    <re><re><form type="lemma"><orth>gæpp-ævvong</orth></form><sense><cit type="translation"
                    xml:lang="ru">
                    <q>готовый к прыжку</q>
                </cit><cit type="translation" xml:lang="en">
                    <q>ready to jump</q>
                </cit></sense></re><re><form type="lemma"><orth>ævvong-xor</orth></form><sense><cit
                    type="translation" xml:lang="ru">
                    <q>дармоед</q>
                </cit><note type="comment" xml:lang="ru"> („едящий готовое, не им
                    добытое“)</note><note type="comment" xml:lang="en"> (“eating ready-made things,
                    which one did not obtain by oneself”)</note><cit type="translation"
                    xml:lang="en">
                    <q>sponger</q>
                </cit><note type="comment" xml:lang="ru"> („едящий готовое, не им
                    добытое“)</note><note type="comment" xml:lang="en"> (“eating ready-made things,
                    which one did not obtain by oneself”)</note></sense></re></re>
    <re xml:lang="os-x-digor"><lang/><form type="lemma"><orth>kust-ærvong</orth></form><sense><cit
                type="translation" xml:lang="ru">
                <q>готовый к работе</q>
            </cit><cit type="translation" xml:lang="en">
                <q>ready for work</q>
            </cit></sense></re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>су ardta, uj xordta ævvongæj, ʒæbæx</quote>
            <cit type="translation" xml:lang="ru">
                <q>что находила — проедала беззаботно, хорошо</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>what she found, she ate careless, well</q>
            </cit>
            <bibl><ref target="#src_Коста"/></bibl>
        </cit>
        <cit type="example">
            <quote>ūdxæssæg ævvongæj axæmty xæssy</quote>
            <cit type="translation" xml:lang="ru">
                <q>ангел смерти без труда уносит таких</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>death angel carelessly carries such away</q>
            </cit>
            <bibl><ref target="#src_Коста"/><biblScope>44</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>kosæntæ idarddær ærvong</quote>
            <cit type="translation" xml:lang="ru">
                <q>пусть работают дальше безмятежно</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>let them continue to work carelessly</q>
            </cit>
            <bibl><ref target="#src_Bes."/><biblScope>69</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>K˳yʒanmæ axæm ævvong kʼæbærtæj cæryn xorz kastī</quote>
            <cit type="translation" xml:lang="ru">
                <q>Кудзану нравилось жить на таких даровых хлебах</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>Kuzan liked living on such bread of idleness</q>
            </cit>
            <bibl><ref target="#src_Сека"/><biblScope>65</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>adæm bacydysty gænæxty, fīdærtty, mæsg˳yty xæstævvongæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>люди укрылись в замках, крепостях, башнях, готовые сражаться</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>people took refuge in castles, fortresses, towers, ready to fight</q>
            </cit>
            <bibl><ref target="#src_Čerm."/><biblScope>167</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>gæpp ærvong beræǧ</quote>
            <cit type="translation" xml:lang="ru">
                <q>готовый к прыжку волк</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>a wolve ready to jump</q>
            </cit>
            <bibl><ref target="#src_Bes._Ka_ke"/><biblScope>81</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>fættæxun ærvong</quote>
            <cit type="translation" xml:lang="ru">
                <q>готовый улететь</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>ready to fly away</q>
            </cit>
            <bibl><ref target="#src_MD"/><biblScope>1936 II 35</biblScope></bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect"><lang/></usg>
            <quote>marun ærvong</quote>
            <cit type="translation" xml:lang="ru">
                <q>готовый убить</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>ready to kill</q>
            </cit>
            <bibl><ref target="#src_Sam."/><biblScope>75</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>nekæd yæwuj kust ærvong</quote>
            <cit type="translation" xml:lang="ru">
                <q>он никогда не бывает готовым к работе</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he is never ready for work</q>
            </cit>
            <bibl><ref target="#src_SD"/><biblScope>78%l3</biblScope></bibl>
        </cit>
    </cit>
