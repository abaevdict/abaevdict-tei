    <sense>
        <cit type="translation" xml:lang="ru">
            <q>яйцо</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>egg</q>
        </cit>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>æjḱytæj qajla akodton</quote>
            <cit type="translation" xml:lang="ru">
                <q>из яиц я сделал яичницу</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>I made scrambled eggs out of eggs</q>
            </cit>
            <bibl>
                <ref target="#src_Сека"/>
                <biblScope>118</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>æfsīn... æjḱytæ afyxta æmæ wazægæn arvysta; kūsæg æjḱytæj īw axordta</quote>
            <cit type="translation" xml:lang="ru">
                <q>хозяйка сварила яйца и послала гостю; слуга съел одно из яиц</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>the hostess boiled eggs and sent them to the guest; the servant ate one of the
                    eggs</q>
            </cit>
            <bibl>
                <ref target="#src_ОТ"/>
                <biblScope>93</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>kark! ajk radt</quote>
            <cit type="translation" xml:lang="ru">
                <q>курочка! дай яичко</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>hen! give me an egg</q>
            </cit>
            <bibl>
                <ref target="#src_ОТ"/>
                <biblScope>62</biblScope>
            </bibl>
        </cit>
    </cit>
