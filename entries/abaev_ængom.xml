<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_ængom"
    xml:lang="os">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>ængom</orth>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>ængon</orth>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>плотный</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>dense</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>плотно прилегающий</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>closely fitting</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>тесный</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>tight</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>дружный</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>friendly</q>
            </cit>
        </sense>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>fænykmæ ængom badync syvællættæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>вплотную к золе (очага) сидят дети</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>there are children sitting close to the ashes (of the fireplace)</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>43</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>Ḱelexsærtan... jæ fīdærtty dwærttæ nykkodta ængom æxkæd æmæ cæry</quote>
            <cit type="translation" xml:lang="ru">
                <q>Челехсартан плотно запер ворота своей крепости и живет</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>Chelehsartan has closed tightly the gate of his stronghold and he lives here</q>
            </cit>
            <bibl>
                <ref target="#src_ЮОПам."/>
                <biblScope>I 106</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>æ bor alasabæl æ saw sarǧ ængon fevardta</quote>
            <cit type="translation" xml:lang="ru">
                <q>он плотно уложил свое черное седло на своего буланого мерина</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he hove his black saddle up onto his dun gelding</q>
            </cit>
            <bibl>
                <ref target="#src_Диг._сказ."/>
                <biblScope>52</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>bæxbæl æxe fe ʽngon kodta</quote>
            <cit type="translation" xml:lang="ru">
                <q>плотно сел на коня</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>[he] tightly took horse</q>
            </cit>
        </cit>
        <cit type="example">
            <quote>aftæ ta ængomæj cardysty</quote>
            <cit type="translation" xml:lang="ru">
                <q>опять они жили так же дружно</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>they lived in peace and friendship again</q>
            </cit>
            <bibl>
                <ref target="#src_ОЭ"/>
                <biblScope>I 52</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>rūxsmæ ænæzīvæg comūt ængomæj</quote>
            <cit type="translation" xml:lang="ru">
                <q>к свету не ленясь пойдем дружно</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>not being lazy, we will go to the light together</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>34</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>ængom cwanontæ sag murync, ængom bīnontæ card аrуnc</quote>
            <cit type="translation" xml:lang="ru">
                <q>дружные охотники убивают оленя, дружная семья находит (хорошую) жизнь</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>united hunters kill a deer, united family finds a (good) life</q>
            </cit>
        </cit>
    </cit>
