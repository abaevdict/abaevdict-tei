            <bibl><ref target="#src_СОПам."/><biblScope>II 42</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>kænæd di ærwagæs, kænʒænæj dæmæ eris</quote>
            <cit type="translation" xml:lang="ru">
