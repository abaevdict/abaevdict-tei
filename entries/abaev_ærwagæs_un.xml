            <bibl><ref target="#src_СОПам."/><biblScope>II 129</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>osæj dær ba ʼragæs æj</quote>
            <cit type="translation" xml:lang="ru">
                <q>женщина поверила</q>
            </cit>
            <cit type="translation" xml:lang="en">
