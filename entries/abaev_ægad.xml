    <text>
        <body>
            <entry xml:id="entry_ægad" xml:lang="os">
                <form xml:lang="os-x-iron" type="lemma"><orth>ægad</orth></form>
                <form xml:lang="os-x-digor" type="dialectal"><orth>ægadæ</orth></form>
                <sense><abv:tr xml:lang="ru">
                        <q>бесславный</q>
                    </abv:tr><abv:tr xml:lang="en">
                        <q>inglorious</q>
                    </abv:tr></sense>
                <abv:exampleGrp>
                    <abv:example>
                        <quote>æz dæ ægady æzdæxtæj næ azdaxʒynæn</quote>
                        <abv:tr xml:lang="ru">
                            <q>я не допущу для тебя бесславного возвращения</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>I will not allow an inglorious return for you</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_ОЭ"/><biblScope>I 42</biblScope></bibl>
                    </abv:example>
                    <abv:example>
                        <quote>dæ xorzæxæj, ægad mæ ma fækæ</quote>
                        <abv:tr xml:lang="ru">
                            <q>да будет твоя милость, не обесславь меня</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>let your mercy be, do not dishonor me</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_ОЭ"/><biblScope>I 44</biblScope></bibl>
                    </abv:example>
                    <abv:example>
                        <quote>paxumpar ægad næ wæjjy</quote>
                        <abv:tr xml:lang="ru">
                            <q>не бывает пророк без чести</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>A prophet is not without honour</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Марк"/><biblScope>%i6%i
                            4</biblScope></bibl>
                    </abv:example>
                    <abv:example>
                        <quote>tæxūdiag stūt…, k˳y wæ ægad kænoj</quote>
                        <abv:tr xml:lang="ru">
                            <q>блаженны вы…, когда будут поносить вас</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>Blessed are ye, when men shall… reproach you</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Лука"/><biblScope>%i6%i
                            22</biblScope></bibl>
                    </abv:example>
                    <abv:example>
                        <quote>ægad næ særmæ næ xæssæm</quote>
                        <abv:tr xml:lang="ru">
                            <q>мы не примем бесславия на голову</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>we will not take disgrace on our heads</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_ОЭ"/><biblScope>I 106</biblScope></bibl>
                    </abv:example>
                </abv:exampleGrp>
                <etym xml:lang="ru"><ref type="xr" target="#entry_kad"/> ‘слава’ с негативной
                    частицей <ref type="xr" target="#entry_æ-"/>.</etym>
                <etym xml:lang="en"><ref type="xr" target="#entry_kad"/> ‘glory’ with the negative
                    particle <ref type="xr" target="#entry_æ-"/>.</etym>
            </entry>
