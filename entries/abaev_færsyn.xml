    <sense n="1" xml:id="sense_færsyn.1"><cit type="translation" xml:lang="ru">
            <q>спрашивать</q>
        </cit><cit type="translation" xml:lang="en">
            <q>ask</q>
        </cit></sense>
    <sense n="2" xml:id="sense_færsyn.2"><cit type="translation" xml:lang="ru">
