                <q xmlns="http://www.tei-c.org/ns/1.0">разорить</q>
              </tr>
              <tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="en">
                <q xmlns="http://www.tei-c.org/ns/1.0">to bring to ruin</q>
              </tr>
            </sense>
            <sense>
              <abv:tr xml:lang="ru">
                <q>истребить</q>
              </abv:tr>
              <abv:tr xml:lang="en">
                <q>to destroy</q>
              </abv:tr>
            </sense>
          </sense>
        </re>
        <re>
