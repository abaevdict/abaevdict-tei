    <sense>
        <cit type="translation" xml:lang="ru">
            <q>жить</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>live</q>
        </cit>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>raǵу wæjygmæ læskʒæræn īw mæg˳yr læg card</quote>
            <cit type="translation" xml:lang="ru">
                <q>давно у великана в качестве пастуха-батрака жил один бедняк</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>long time ago one poor man lived with a giant as a shepherd-farm laborer</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>103</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>k˳yd cærʒynæn ænæ dæw...?</quote>
            <cit type="translation" xml:lang="ru">
                <q>как я буду жить без тебя?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>how will I live without you?</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>112</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>cæruntæ, xwæruntæ bajdædtoncæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>стали жить да есть</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>[they] began to live and eat</q>
            </cit>
            <bibl>
