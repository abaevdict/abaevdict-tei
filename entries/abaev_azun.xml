<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_azun"
    xml:lang="os-x-digor">
    <form type="lemma">
        <orth>azun</orth>
        <form type="inflected" subtype="ptcp">
            <orth>azt</orth>
        </form>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>давать приют</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>give shelter</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>лелеять</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>cherish</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>ласкать</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>caress</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>кормить</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>feed</q>
            </cit>
        </sense>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>xæstæg næ xasta, sinxoni næ warzta, binonti næ azta</quote>
            <cit type="translation" xml:lang="ru">
                <q>родича не кормил, соседа не любил, домочадцев не ласкал</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>didn't feed the relative, didn't love the neighbor, didn't caress the
                    household</q>
            </cit>
            <bibl>
                <ref target="#src_ОЭ"/>
                <biblScope>I 110</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>xæstægi xasta, sinxoni azta</quote>
            <cit type="translation" xml:lang="ru">
                <q>родственника кормил, с соседом был ласков</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>fed a relative, was gentle to a neighbor</q>
            </cit>
            <bibl>
                <ref target="#src_ОЭ"/>
                <biblScope>I 108</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>iwazæg xucawi iwazæg æj, zæǧgæ, ma sæ baaztoncæ</quote>
            <cit type="translation" xml:lang="ru">
                <q>«гость — божий гость», — сказали они и приютили их</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>ʽthe guest is a guest of Godʼ, they said and gave them shelter</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>II 46</biblScope>
            </bibl>
        </cit>
    </cit>
