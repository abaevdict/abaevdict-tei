<?xml version="1.0" encoding="UTF-8"?>
<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_gaʒraxatæj" xml:lang="os">
    <form type="lemma">
        <orth>gaʒraxatæj</orth>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>изменнически</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>traitorously</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>предательски</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>treacherously</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>вероломно</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>in bad faith</q>
            </cit>
        </sense>
    </sense>
    <re>
        <form type="lemma">
            <orth>gaʒraxatæj racæwyn</orth>
        </form>
        <sense>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>совершить вероломство</q>
                </cit>
                <cit type="translation" xml:lang="en">
                    <q>commit treachery</q>
                </cit>
            </sense>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>изменить</q>
                </cit>
                <cit type="translation" xml:lang="en">
                    <q>betray</q>
                </cit>
            </sense>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>предать</q>
                </cit>
            </sense>
        </sense>
    </re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>gaʒraxatæj myl racyd</quote>
            <cit type="translation" xml:lang="ru">
                <q>он меня предал</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he betrayed me</q>
            </cit>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>æ falʒos sajd, talingæ æma gaʒiraxatæj fæstæmæ necibal winuj</quote>
            <cit type="translation" xml:lang="ru">
                <q>он ничего не видит вокруг себя, кроме обмана, мрака и предательства</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he sees nothing around him except deceit, darkness and betrayal</q>
            </cit>
            <bibl>
                <ref target="#src_Bes._Ka_ke"/>
                <biblScope>39</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>dy gaʒraxat bakodtaj — ūrs tyrysa sdardtaj</quote>
            <cit type="translation" xml:lang="ru">
                <q>ты совершил предательство — поднял белый флаг</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>you committed treason by raising a white flag</q>
            </cit>
            <bibl>
                <ref target="#src_Брит."/>
                <biblScope>124</biblScope>
            </bibl>
        </cit>
    </cit>
