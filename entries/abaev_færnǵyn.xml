    <text>
        <body>
            <entry xml:id="entry_færnǵyn" xml:lang="os">
                <form xml:lang="os-x-iron" type="lemma"><orth>færnǵyn</orth></form>
                <form xml:lang="os-x-digor" type="dialectal"><orth>færngun</orth></form>
                <sense><sense><abv:tr xml:lang="ru">
                            <q>имеющий фарн</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>having farn</q>
                        </abv:tr></sense><sense><abv:tr xml:lang="ru">
                            <q>благопристойный</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>decent</q>
                        </abv:tr></sense></sense>
                <re>
                    <note type="comment" xml:lang="ru">выражение</note>
                    <note type="comment" xml:lang="en">the expression</note>
                    <form type="lemma"><orth>færnǵyn ū!</orth></form>
                    <sense><abv:tr xml:lang="ru">
                            <q>будь с %sфарном%s</q>
                        </abv:tr><note type="comment" xml:lang="ru">сопровождает обычно упоминание
                            чего-либо непристойного</note><note type="comment" xml:lang="en">usually
                            accompanies the mention of something obscene</note><abv:tr xml:lang="en">
                            <q>be with %sfarn%s</q>
                        </abv:tr><note type="comment" xml:lang="ru">сопровождает обычно упоминание
                            чего-либо непристойного</note><note type="comment" xml:lang="en">usually
                            accompanies the mention of something obscene</note></sense>
                </re>
                <abv:exampleGrp>
                    <abv:example>
                        <quote>асу xatty cyd ta noǵy farnǵyndær wæd</quote>
                        <abv:tr xml:lang="ru">
                            <q>следующий приезд пусть будет еще обильнее %sфарном%s</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>let the next visit be even more abundant in %sfarn%s</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Коста"
                            /><biblScope>144</biblScope></bibl>
                    </abv:example>
                    <abv:example xml:lang="os-x-digor">
                        <usg><lang/></usg>
                        <quote>færngun bijnontæ</quote>
                        <abv:tr xml:lang="ru">
                            <q>наделенная %sфарном%s семья</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>a family endowed with %sfarn%s</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_СОПам."/><biblScope>II
                            135</biblScope></bibl>
                    </abv:example>
                    <abv:example xml:lang="os-x-digor">
                        <usg><lang/></usg>
                        <quote>wæd næ tunæ færngun uvd!</quote>
                        <abv:tr xml:lang="ru">
                            <q>да будет наше сукно соткано в добрый час (буквально „с
                                %sфарном%s“)!</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>may our cloth be woven in a good hour (literally "with
                                %sfarn%s")!</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Iræf"/><biblScope>102</biblScope></bibl>
                    </abv:example>
                </abv:exampleGrp>
                <etym xml:lang="ru">См. <ref type="xr" target="#entry_farn"/>.</etym>
                <etym xml:lang="en">See <ref type="xr" target="#entry_farn"/>.</etym>
            </entry>
