            <abv:tr xml:lang="ru">
              <q>косой</q>
            </abv:tr>
            <abv:tr xml:lang="en">
              <q>slanting</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>скошенный</q>
            </abv:tr>
            <abv:tr xml:lang="en">
