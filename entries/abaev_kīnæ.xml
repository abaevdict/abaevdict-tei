<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_kīnæ"
    xml:lang="os-x-digor">
    <form type="lemma"><orth>kīnæ</orth><form type="variant"><orth>kenæ</orth></form></form>
    <sense><sense><cit type="translation" xml:lang="ru">
                <q>месть</q>
            </cit><cit type="translation" xml:lang="en">
                <q>revenge</q>
            </cit></sense><sense><cit type="translation" xml:lang="ru">
                <q>отмщение</q>
            </cit><cit type="translation" xml:lang="en">
                <q>vengeance</q>
            </cit></sense></sense>
    <re><form type="lemma"><orth>kīnæ xatun</orth></form><sense><cit type="translation"
                xml:lang="ru">
                <q>мстить</q>
            </cit><cit type="translation" xml:lang="en">
                <q>to take revenge</q>
            </cit></sense></re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>dæw kenæ mæbæl es</quote>
            <cit type="translation" xml:lang="ru">
                <q>ты должен мне возместить, подвергнуться моей мести</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>you must compensate me, undergo my revenge</q>
            </cit>
            <bibl><ref target="#src_ОЯФ_I"/><biblScope>454</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>cæmæn ǧæwama bafedawa Mærzabeg ænæ æ kenæ baxatgæj?</quote>
            <cit type="translation" xml:lang="ru">
                <q>почему Марзабег должен пойти на мировую, не отомстив?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>why should Marzabeg make peace without taking revenge?</q>
            </cit>
            <bibl><ref target="#src_LQ"/><biblScope>III 41</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>æ kenæmæ læg ramardta</quote>
            <cit type="translation" xml:lang="ru">
                <q>во имя мести он убил человека</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he killed a man in the name of revenge</q>
            </cit>
            <bibl><ref target="#src_LQ"/><biblScope>III 41</biblScope></bibl>
        </cit>
    </cit>
