      <entry xml:id="entry_marxo" xml:lang="os" abv:completeness="incomplete">
        <form type="lemma" xml:lang="os-x-iron"><orth>marxo</orth></form>
        <form xml:lang="os-x-digor" type="dialectal"><orth>marxwæ</orth><form type="variant"
              ><orth>marxwa</orth></form></form>
        <sense><abv:tr xml:lang="ru">
            <q>пост (христианский)</q>
          </abv:tr></sense>
        <note type="comment">; ср. <ref type="xr" target="#entry_barysḱʼī"/>, <ref type="xr"
            target="#entry_kom_1"><w>kom (daryn)</w></ref></note>
        <re>
          <form type="lemma"><orth>marxo daryn</orth></form>
          <sense><tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">поститься</q>
            </tr></sense>
          <note type="bibl"> (<bibl><ref type="bibl" target="#src_Munk."/>
              <biblScope>211 сл., 216</biblScope></bibl>)</note>
        </re>
        <re>
          <form type="lemma"><orth>styr marxo</orth></form>
          <sense><tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">Великий Пост</q>
            </tr></sense>
          <note type="bibl"> (<bibl><ref type="bibl" target="#src_Munk."/>
              <biblScope>217</biblScope></bibl>)</note>
        </re>
        <re>
          <form type="lemma"><orth>marxoxor</orth></form>
          <sense><sense><tr xmlns="http://ossetic-studies.org/ns/abaevdict" xml:lang="ru">
                <q xmlns="http://www.tei-c.org/ns/1.0">не соблюдающий поста</q>
              </tr></sense><sense><abv:tr xml:lang="ru">
                <q>едящий скоромное</q>
              </abv:tr></sense></sense>
        </re>
        <exampleGrp xmlns="http://ossetic-studies.org/ns/abaevdict">
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">ælvæst ma ‘ncæ onæn sæ rænttæ: sæ
                <oRef>marxwa</oRef>, oraza ci næ ‘j</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">у них еще подтянуты пояса; (христианский) пост,
                (мусульманский) пост, чего только (у них) нет!</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Bes."/>
              <biblScope>73</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">æz nal dæn <oRef>marxoxor</oRef>,
              dæwaw</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">я уже не ем скоромного, как ты</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Коста"/>
              <biblScope>93</biblScope></bibl>
          </example>
        </exampleGrp>
        <etym xml:lang="ru">Из <mentioned xml:lang="ka"><lang/>
            <w>marxva</w>
            <gloss><q>пост</q></gloss></mentioned>; отсюда и <mentioned><mentioned xml:lang="inh"><lang/>
              <w>marxæ</w></mentioned>, <mentioned xml:lang="ce"><lang/>
              <w>marxwa</w></mentioned>
            <gloss>id</gloss></mentioned>. <mentioned xml:lang="ka"><lang>Груз.</lang>
            <w>marxva</w></mentioned> — из <mentioned xml:lang="xpr"><lang/>
            <w>pāhr</w>
            <note type="comment">(← <mentioned xml:lang="ira"><w type="rec"
              >pāθra-</w></mentioned>)</note>
            <gloss><q>охрана</q></gloss></mentioned> (<bibl><ref type="bibl"
              target="#ref_Андроникашвили"/>
            <biblScope>256</biblScope></bibl>).</etym>
      </entry>
