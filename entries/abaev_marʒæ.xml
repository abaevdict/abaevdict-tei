      <entry xml:id="entry_marʒæ" xml:lang="os" abv:completeness="incomplete">
        <form type="lemma"><orth>marʒæ</orth><form type="variant"><orth>marǯæ</orth></form></form>
        <sense><def xml:lang="ru">в сочетаниях <w>hæjt-marʒæ</w>, <w>ha-marʒæ</w>, <w>jæ-marʒæ</w>
            возглас воодушевления</def></sense>
        <sense><note type="comment">отмечаются случаи адъективного употребления в
              значении</note><sense><abv:tr xml:lang="ru">
              <q>замечательный</q>
            </abv:tr></sense><sense><abv:tr xml:lang="ru">
              <q>отменный</q>
            </abv:tr></sense><sense><abv:tr xml:lang="ru">
              <q>отличный</q>
            </abv:tr></sense><sense><abv:tr xml:lang="ru">
              <q>бравый</q>
            </abv:tr></sense></sense>
        <exampleGrp xmlns="http://ossetic-studies.org/ns/abaevdict">
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">he <oRef>marʒæ</oRef>, īsḱī! bynton sæft
              kænæm!</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">гей, (явись) кто-нибудь! мы вконец гибнем!</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Коста"/>
              <biblScope>39</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">ha-<oRef>marʒæ</oRef>, magūsa!</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">ну же, бездельник!</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Коста"/>
              <biblScope>34</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">hæjt, hæjt <oRef>marʒæ</oRef>, razmæ!</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">гей, гей, вперед!</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Niger"/>
              <biblScope>135</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">zad igwærdæni ha-<oRef>marʒæ</oRef>, zæǧgæ,
              hæjttæj kærduj</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">на густом покосе он косит вовсю, говоря <q
                  rendition="#rend_doublequotes">ha-marʒæ</q></q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Bes._Ka_ke"/>
              <biblScope>24</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0">raǵy kæddær næ xæxty raqomyl īw
                <oRef>hæjtmarʒæ</oRef> læppū, dīssaǵy qælæsǵyn</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">давно когда-то в наших горах вырос
                замечательный парень,, с удивительным голосом</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_F."/>
              <biblScope>1957 I 10</biblScope></bibl>
          </example>
        </exampleGrp>
        <etym xml:lang="ru">Ср. <mentioned xml:lang="inh"><lang/>
            <phr>marzæ jæ!</phr>
            <gloss>воодушевляющий возглас при джигитовке и в других случаях</gloss></mentioned>,
              <mentioned><mentioned xml:lang="kbd"><lang/>
              <w>maržä</w></mentioned>, <mentioned xml:lang="ady"><lang/>
              <w>hejt-marǯe!</w></mentioned>
            <gloss>призыв к действию</gloss></mentioned>, <mentioned xml:lang="kbd-x-crc"><lang/>
            <w>marǯa!</w>
            <note type="comment">(<phr>marǯa gweš!</phr>
              <gloss><q rendition="#rend_doublequotes">на помощь!</q></gloss>)</note></mentioned>,
            <mentioned xml:lang="abq"><lang/>
            <phr>wəj marǯa-xara!</phr>
            <gloss><q rendition="#rend_doublequotes">к действию!</q></gloss>, <gloss><q
                rendition="#rend_doublequotes">на помощь!</q></gloss></mentioned>, <mentioned
            xml:lang="ab"><lang/>
            <w>a-marǯa!</w>
            <gloss><q rendition="#rend_doublequotes">ну же!</q></gloss></mentioned>. Первоисточник,
          возможно, <mentioned xml:lang="ka"><lang/>
            <w>marǯva</w>
            <gloss><q>успех</q></gloss>,
              <gloss><q>победа</q></gloss></mentioned>.<lb/><bibl><author>Генко</author>, <ref
              type="bibl" target="#ref_ЗКВ"/>
            <biblScope>V 739</biblScope></bibl>.</etym>
      </entry>
