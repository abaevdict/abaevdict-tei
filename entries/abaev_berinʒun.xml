<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0"
    xml:id="entry_berinʒun" xml:lang="os-x-digor">
    <form xml:lang="os-x-iron" type="lemma">
        <orth>berinʒun</orth>
    </form>
    <form xml:lang="os-x-digor" type="dialectal">
        <orth>berixt</orth>
    </form>
    <sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>зевать</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>yawn</q>
            </cit>
        </sense>
        <sense>
            <cit type="translation" xml:lang="ru">
                <q>потягиваться</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>strech oneself</q>
            </cit>
        </sense>
    </sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>i biccew æxe raberixtitæ kodta ma æ avdæni færstæ ratudta</quote>
            <cit type="translation" xml:lang="ru">
                <q>мальчик потянулся и оторвал бока своей колыбели</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>a boy stretched himself and pulled away the sides of his cradle</q>
            </cit>
            <bibl>
                <ref target="#src_СОПам."/>
                <biblScope>II 48</biblScope>
            </bibl>
        </cit>
    </cit>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>i biccew æxe raberixtitæ kodta ma æ avdæni færstæ ratudta</quote>
            <cit type="translation" xml:lang="ru">
