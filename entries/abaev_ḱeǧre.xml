            <entry xml:id="entry_ḱeǧre" xml:lang="os">
                <form xml:lang="os-x-iron" type="lemma"><orth>ḱeǧre</orth></form>
                <form xml:lang="os-x-digor" type="dialectal"><orth>keǧære</orth></form>
                <sense><sense><abv:tr xml:lang="ru">
                            <q>проводник</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>guide</q>
                        </abv:tr></sense><sense><abv:tr xml:lang="ru">
                            <q>слуга</q>
                        </abv:tr><abv:tr xml:lang="en">
                            <q>servant</q>
                        </abv:tr></sense></sense>
                <abv:exampleGrp>
                    <abv:example>
                        <quote>ældar jæ ḱeǧretimæ</quote>
                        <abv:tr xml:lang="ru">
                            <q>алдар со своими слугами</q>
                        </abv:tr>
                        <abv:tr xml:lang="en">
                            <q>the aldar and his servants</q>
                        </abv:tr>
                        <bibl><ref type="bibl" target="#src_Čerm."/><biblScope>53</biblScope></bibl>
                    </abv:example>
                </abv:exampleGrp>
                <etym xml:lang="ru">Усвоено из адыгского; ср. <mentioned xml:lang="uby"><lang/>
                        <w>käɣ</w>
                        <gloss><q>товарищ</q></gloss></mentioned>, <mentioned xml:lang="uby"><w/>
                        <gloss><q>спутник</q></gloss></mentioned> (<bibl><ref type="bibl"
                            target="#ref_Mészaros"/><biblScope>350</biblScope></bibl>), <mentioned
                        xml:lang="kbd"><lang/>
                        <w>kegarej</w>
                        <gloss><q>товарищ</q></gloss></mentioned>, <mentioned xml:lang="abq"><lang/>
                        <w>қaǧrəya</w>
                        <gloss><q>проводник</q></gloss></mentioned>.</etym>
                <etym xml:lang="en">It was acquired from Adyghe; cf. <mentioned xml:lang="uby"><lang/>
                        <w>käɣ</w>
                        <gloss><q>comrade</q></gloss></mentioned>, <mentioned xml:lang="uby"><w/>
                        <gloss><q>companion</q></gloss></mentioned> (<bibl><ref type="bibl"
                            target="#ref_Mészaros"/><biblScope>350</biblScope></bibl>), <mentioned
                        xml:lang="kbd"><lang/>
                        <w>kegarej</w>
                        <gloss><q>comrade</q></gloss></mentioned>, <mentioned xml:lang="abq"><lang/>
                        <w>қaǧrəya</w>
                        <gloss><q>guide</q></gloss></mentioned>.</etym>
