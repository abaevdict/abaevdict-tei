<entry xmlns:functx="http://www.functx.com" xmlns="http://www.tei-c.org/ns/1.0" xml:id="entry_æʒæm"
    xml:lang="os">
    <form type="lemma"><orth>æʒæm</orth></form>
    <sense><sense><cit type="translation" xml:lang="ru">
                <q>бездыханный</q>
            </cit><cit type="translation" xml:lang="en">
                <q>lifeless</q>
            </cit></sense><sense><cit type="translation" xml:lang="ru">
                <q>беззвучный</q>
            </cit><cit type="translation" xml:lang="en">
                <q>soundless</q>
            </cit></sense></sense>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>æʒæm mard akodta</quote>
            <cit type="translation" xml:lang="ru">
                <q>он умер мгновенно (без агонии)</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he died instantly (no agony)</q>
            </cit>
        </cit>
        <cit type="example">
            <quote>æʒæm badt ærkodta</quote>
            <cit type="translation" xml:lang="ru">
                <q>она села, не говоря ни слова</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>she sat down without saying a word</q>
            </cit>
            <bibl><ref target="#src_СОПам."/><biblScope>III 51</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>æʒæm x˳yst kæny</quote>
            <cit type="translation" xml:lang="ru">
                <q>спит, как мертвый (не издавая ни звука)</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>sleeps like a dead person (without making a sound)</q>
            </cit>
        </cit>
        <cit type="example">
            <quote>aw, k˳yd æʒæm mard fæwydaid?</quote>
            <cit type="translation" xml:lang="ru">
                <q>как она могла умереть так мгновенно?</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>how could she die so instantly?</q>
            </cit>
            <bibl><ref target="#src_MD"/><biblScope>1934 II 4</biblScope></bibl>
        </cit>
    </cit>
