      <entry xml:id="entry_mærdæxsævær" xml:lang="os" abv:completeness="complete">
        <form xml:id="form_d2316e66" type="lemma"><orth>mærdæxsævær</orth></form>
        <sense xml:id="sense_d2316e69"><abv:tr xml:lang="ru">
            <q>погребальный ужин в день смерти покойника</q>
          </abv:tr><abv:tr xml:lang="en">
            <q>funerary supper on the day of death</q>
          </abv:tr></sense>
        <exampleGrp xmlns="http://ossetic-studies.org/ns/abaevdict" xml:id="exampleGrp_d2316e79">
          <example xml:id="example_d2316e81">
            <quote xmlns="http://www.tei-c.org/ns/1.0">ravgarstoncæ <oRef>mærdæxsæværæn</oRef>
              gal</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">для погребального ужина зарезали быка</q>
            </tr>
            <tr xml:lang="en">
              <q xmlns="http://www.tei-c.org/ns/1.0">for the funerary supper they slaughtered a
                bull</q>
            </tr>
