      <entry xml:id="entry_x0ymætæǵy" xml:lang="os" abv:completeness="incomplete">
        <form xml:id="form_d2684e66" type="lemma" xml:lang="os-x-iron"><orth>x˳ymætæǵy</orth></form>
        <form xml:lang="os-x-digor" type="dialectal"><orth>xumætægi</orth></form>
        <sense>
          <sense xml:id="sense_d2684e69">
            <abv:tr xml:lang="ru">
              <q>зря</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>впустую</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>тщетно</q>
            </abv:tr>
          </sense>
        </sense>
        <note type="comment">; ср. <ref type="xr" target="#entry_ʒæǧæl"><w>ʒæǧæly</w></ref>, <ref
            type="xr" target="#entry_wæǧd"><w>wæǧdy</w></ref></note>
        <exampleGrp xmlns="http://ossetic-studies.org/ns/abaevdict">
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0"><oRef/> mæ næ bawarztoj</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">не зря они меня полюбили</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Брит."/>
              <biblScope>22</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0"><oRef/> ma staw dy mæn</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">не хвали ты меня зря</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_Niger"/>
              <biblScope>102</biblScope></bibl>
          </example>
          <example>
            <quote xmlns="http://www.tei-c.org/ns/1.0"><oRef/> badynæj æstæg æxsynyn xwyzdær
              ū</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">чем сидеть зря, лучше (хоть) глодать кость</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_ЮОПам."/>
              <biblScope>III 232</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">xætæli qwæltæ <oRef>xumætægi</oRef> arf næ
              ninniurstaj</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">не зря ты запрятала глубоко обломки свирели</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_ОЭп."/>
              <biblScope>61<hi rendition="#rend_subscript">291—292</hi></biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0">wæxæn æmbesond ʒilli ‘xsæn
                <oRef>xumætægi</oRef> næ bajzadæj</quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">такое предание не зря осталось в народе</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_MD"/>
              <biblScope>1956 VII 55</biblScope></bibl>
          </example>
          <example xml:lang="os-x-digor">
            <usg xmlns="http://www.tei-c.org/ns/1.0"><lang/></usg>
            <quote xmlns="http://www.tei-c.org/ns/1.0"><q>æxecæn æj <oRef>xumætægi</oRef> zærdæ ku
                feværaj</q></quote>
            <tr xml:lang="ru">
              <q xmlns="http://www.tei-c.org/ns/1.0">он тщетно возлагает на него надежды</q>
            </tr>
            <bibl xmlns="http://www.tei-c.org/ns/1.0"><ref type="bibl" target="#src_СОПам."/>
              <biblScope>II 161</biblScope></bibl>
          </example>
        </exampleGrp>
        <etym xml:lang="ru">Лексикализованный локатив от  <ref type="xr" target="#entry_x0ymætæg"/>
          с развитием значения <q rendition="#rend_doublequotes">просто так → впустую,
          зря</q>.</etym>
