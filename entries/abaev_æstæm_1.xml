    <sense>
        <cit type="translation" xml:lang="ru">
            <q>редкий</q>
        </cit>
        <cit type="translation" xml:lang="en">
            <q>rare</q>
        </cit>
    </sense>
    <re>
        <form type="lemma">
            <orth>æstæm xatt</orth>
        </form>
        <sense>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>редко</q>
                </cit>
            </sense>
            <sense>
                <cit type="translation" xml:lang="ru">
                    <q>изредка</q>
                </cit>
            </sense>
        </sense>
    </re>
    <cit type="exampleGroup">
        <cit type="example">
            <quote>læǵy x˳yzæn læg næm — æstæm</quote>
            <cit type="translation" xml:lang="ru">
                <q>мужу подобный муж у нас редок</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>a man-like man is rare</q>
            </cit>
            <bibl>
                <ref target="#src_Коста"/>
                <biblScope>31</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>ʽstæm zinnuj ʒi i fecawæg, ʽstæn kæsuj irnæ i хог</quote>
            <cit type="translation" xml:lang="ru">
                <q>редко виден там путник, редко заглядывает туда солнце</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>a traveler is rarely seen there, the sun rarely shines there</q>
            </cit>
            <bibl>
                <ref target="#src_Iræf"/>
                <biblScope>60</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>kʼærnixæn æ koj æstæn æj</quote>
            <cit type="translation" xml:lang="ru">
                <q>редко слышно о воровстве</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>on can rarely hear about thievery</q>
            </cit>
            <bibl>
                <ref target="#src_Qazb."/>
                <biblScope>22</biblScope>
            </bibl>
        </cit>
        <cit type="example" xml:lang="os-x-digor">
            <usg type="dialect">
                <lang/>
            </usg>
            <quote>æstænmæ... gær æriǧusidæ rnæ ǵosi</quote>
            <cit type="translation" xml:lang="ru">
                <q>изредка шум доносится до моих ушей</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>noise rarely reaches my ears</q>
            </cit>
            <bibl>
                <ref target="#src_Sam."/>
                <biblScope>83</biblScope>
            </bibl>
        </cit>
        <cit type="example">
            <quote>æxsævæ æstænmæ funæj kænuj</quote>
            <cit type="translation" xml:lang="ru">
                <q>ночью он редко засыпает</q>
            </cit>
            <cit type="translation" xml:lang="en">
                <q>he rarely falls asleep at night</q>
            </cit>
            <bibl>
                <ref target="#src_Bes._Ka_ke"/>
                <biblScope>57</biblScope>
            </bibl>
        </cit>
    </cit>
