            </abv:tr>
            <abv:tr xml:lang="en">
              <q>courteous</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>вежливый</q>
            </abv:tr>
            <abv:tr xml:lang="en">
              <q>polite</q>
            </abv:tr>
          </sense>
          <sense>
            <abv:tr xml:lang="ru">
              <q>изысканный</q>
            </abv:tr>
            <abv:tr xml:lang="en">
              <q>refined</q>
            </abv:tr>
