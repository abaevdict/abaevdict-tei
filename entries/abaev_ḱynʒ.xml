            <bibl><ref target="#src_Сека"/><biblScope>76</biblScope></bibl>
        </cit>
        <cit type="example">
            <quote>bon syn k˳yvdæn wydī, xsæv ta ḱynʒæxsævæn</quote>
            <cit type="translation" xml:lang="ru">
